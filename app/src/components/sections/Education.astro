<section id="education" class="py-24 relative">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-6xl font-bold mb-8">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-cyan-400">
          Educación & Certificaciones
        </span>
      </h2>
      <div
      class="w-24 h-1 bg-gradient-to-r from-yellow-100 to-cyan-400 mx-auto rounded-full mb-8"
      ></div>   
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Formación continua y aprendizaje constante para mantenerme actualizado
      </p>
    </div>

    <!-- Education Section -->
    <div class="max-w-4xl mx-auto mb-16">
      <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-3">
        <div class="w-8 h-8 bg-gradient-to-r from-purple-500 to-cyan-500 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
          </svg>
        </div>
        Formación Académica
      </h3>
      
      <div class="space-y-10">
        {education.map((edu) => (
          <div class="education-card glass-card p-6 rounded-2xl hover:scale-105 transition-all duration-300">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
              <div class="flex-1">
                <h4 class="text-xl font-semibold text-white mb-1">{edu.degree}</h4>
                <p class="text-purple-300 font-medium mb-2">{edu.institution}</p>
                <p class="text-gray-400 mb-3">{edu.description}</p>
                <div class="flex flex-wrap gap-4 text-sm text-gray-400">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    {edu.period}
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    </svg>
                    {edu.location}
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Nota: {edu.grade}
                  </span>
                </div>
              </div>
              <div class="md:text-right">
                <span class="px-4 py-2 bg-green-500/20 text-green-300 rounded-full text-sm font-medium">
                  {edu.status}
                </span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Certifications Section -->
    <div class="max-w-6xl mx-auto">
      <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-3">
        <div class="w-8 h-8 bg-gradient-to-r from-cyan-500 to-purple-500 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
          </svg>
        </div>
        Certificaciones & Cursos
      </h3>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {certifications.map((cert) => (
          <div class="certification-card glass-card p-6 rounded-2xl group hover:scale-105 transition-all duration-300">
            <!-- Badge/Logo -->
            <div class="w-16 h-16 bg-gradient-to-r from-purple-500/20 to-cyan-500/20 rounded-xl flex items-center justify-center mb-4 border border-white/10 group-hover:border-purple-400/30 transition-colors">
              <div class="w-10 h-10 bg-white/10 rounded-lg"></div>
            </div>
            
            <!-- Certification Info -->
            <div class="mb-4">
              <h4 class="text-lg font-semibold text-white mb-1 group-hover:text-purple-300 transition-colors">
                {cert.name}
              </h4>
              <p class="text-cyan-300 font-medium text-sm mb-2">{cert.issuer}</p>
              <div class="flex items-center justify-between text-sm text-gray-400 mb-3">
                <span>{cert.date}</span>
                <span class="px-2 py-1 bg-purple-500/20 text-purple-300 rounded-full text-xs">
                  {cert.level}
                </span>
              </div>
            </div>

            <!-- Skills -->
            <div class="mb-4">
              <div class="flex flex-wrap gap-1">
                {cert.skills.map((skill) => (
                  <span class="px-2 py-1 bg-gray-800/50 text-gray-300 rounded text-xs">
                    {skill}
                  </span>
                ))}
              </div>
            </div>

            <!-- Credential ID & Verify -->
            <div class="pt-4 border-t border-gray-700/50">
              <p class="text-xs text-gray-500 mb-2">ID: {cert.credentialId}</p>
              <a 
                href={cert.verifyUrl} 
                target="_blank" 
                class="inline-flex items-center gap-1 text-sm text-cyan-400 hover:text-cyan-300 transition-colors"
              >
                Verificar credencial
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .glass-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .education-card:hover,
  .certification-card:hover .glass-card {
    border-color: rgba(147, 51, 234, 0.3);
    box-shadow: 0 5px 15px rgba(147, 51, 234, 0.1);
  }
  
  .certification-card:hover {
    border-color: rgba(6, 182, 212, 0.3);
    box-shadow: 0 5px 15px rgba(6, 182, 212, 0.1);
  }
</style>