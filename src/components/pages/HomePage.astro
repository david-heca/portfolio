---
import { useTranslations } from '../../i18n/utils';
import '../../styles/hero.css';

export interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<main class="min-h-screen flex items-center justify-center px-4 pt-20 pb-12 md:pb-20 relative overflow-hidden">
  <div class="max-w-4xl mx-auto text-center relative z-10">
    <!-- Contenido del Hero -->
    <div class="space-y-8">
      <!-- Avatar/Foto -->
      <div class="relative w-36 h-36 mx-auto">
        <img 
          src="/assets/dh.webp" 
          alt="David Herrera" 
          class="w-full h-full rounded-full object-cover border-4 border-white dark:border-gray-800 shadow-lg shadow-gray-900/10 dark:shadow-gray-900/30 avatar-glow"
        />
        <div class="absolute inset-0 rounded-full bg-gradient-to-tr from-blue-500 to-purple-600 opacity-10"></div>
      </div>
      
      <div class="space-y-4">
        <p class="text-lg text-gray-600 dark:text-gray-400 font-medium">
          {t.hero.greeting}
        </p>
        
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white">
          David Herrera
        </h1>
        
        <h2 class="text-xl md:text-2xl text-gray-700 dark:text-gray-300 font-medium max-w-3xl mx-auto leading-relaxed">
          {t.hero.title}
        </h2>
      </div>
      
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed">
        {t.hero.description}
      </p>
      
      <!-- Botones de Acción -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-8 pb-4 md:pb-0">
        <a 
          href={lang === 'es' ? '/projects' : '/en/projects'}
          class="inline-flex items-center justify-center px-8 py-3 bg-blue-500 hover:bg-blue-600 text-white font-medium rounded-xl transition-all duration-200 hover:scale-105 shadow-lg shadow-blue-500/25"
        >
          {t.hero.cta}
          <span class="ml-2">→</span>
        </a>
        
        <a 
          href={lang === 'es' ? '/contact' : '/en/contact'}
          class="inline-flex items-center justify-center px-8 py-3 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white font-medium rounded-xl transition-all duration-200 hover:scale-105 hover:bg-gray-50 dark:hover:bg-gray-700"
        >
          {t.common.contactMe}
        </a>
      </div>
    </div>
  </div>
</main>