---
import { useTranslations } from '@i18n/utils';
import '@styles/hero.css';
import Avatar3D from '@components/Avatar3D.astro';
import profileImage from '@assets/dh.webp';
import { twGlobals } from '@utils/tw-ui';
import { PiArrowFatRightDuotone, PiEnvelopeDuotone } from 'react-icons/pi';

export interface Props { lang: 'es' | 'en'; }

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<main class="min-h-screen flex items-center justify-center px-6 pt-20 pb-12 md:pb-20 relative overflow-hidden">
  <div class="max-w-4xl mx-auto text-center relative z-10">
    <!-- Contenido del Hero -->
    <div class="space-y-8">
      <!-- Avatar/Foto 3D -->
      <Avatar3D 
        src={profileImage} 
        alt="David Herrera" 
        size="w-32 md:w-36 xl:w-48"
      />
      
      <div class="space-y-4">
        <p class="text-lg text-gray-600 dark:text-gray-400 font-medium">
          {t.hero.greeting}
        </p>
        
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white">
          David Herrera
        </h1>
        
        <h2 class="text-xl md:text-2xl text-gray-700 dark:text-gray-300 font-medium max-w-3xl mx-auto leading-relaxed">
          {t.hero.title}
        </h2>
      </div>
      
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed">
        {t.hero.description}
      </p>
      
      <!-- Botones de AcciÃ³n -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-8 pb-4 md:pb-0">
        <a 
          href={lang === 'es' ? '/projects' : '/en/projects'}
          class={twGlobals.heroPrimaryButton}
        >
          {t.hero.cta}
          <PiArrowFatRightDuotone className="ml-2 w-6 h-6" />
        </a>
        
        <a 
          href={lang === 'es' ? '/contact' : '/en/contact'}
          class={twGlobals.heroSecondaryButton}
        >
          {t.common.contactMe}
          <PiEnvelopeDuotone className="ml-2 w-6 h-6" />
        </a>
      </div>
    </div>
  </div>
</main>