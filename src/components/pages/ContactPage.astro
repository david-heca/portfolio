---
import { useTranslations } from '../../i18n/utils';
import { PiEnvelopeDuotone, PiPhoneDuotone, PiMapPinDuotone, PiGithubLogoDuotone, PiLinkedinLogoDuotone, PiXLogoDuotone, PiInstagramLogoDuotone, PiDownloadDuotone } from 'react-icons/pi';

export interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const contactInfo = {
  email: "davidherreradelcastillo2000@gmail.com",
  phone: "+52 442 837 2849",
  location: lang === 'es' ? "México, México" : "Mexico, Mexico",
  availability: lang === 'es' ? "Interesado en proyectos colaborativos" : "Interested in collaborative projects",
  timezone: "GMT-6 (CST) - " + (lang === 'es' ? "Ciudad de México" : "Mexico City"),
};

const socialLinks = [
  { name: "GitHub", url: "https://github.com/david-heca", icon: "github" },
  { name: "LinkedIn", url: "https://www.linkedin.com/in/david-heca/", icon: "linkedin" },
  { name: "Twitter", url: "https://x.com/david_heca_", icon: "twitter" },
  { name: "Instagram", url: "https://www.instagram.com/david_heca/", icon: "instagram" }
];
---

<main class="min-h-screen px-4 py-20 md:py-32">
  <div class="max-w-3xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12 md:mb-20">
      <h1 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        {t.contact.title}
      </h1>
      <p class="text-base md:text-lg text-gray-600 dark:text-gray-400">
        {t.contact.subtitle}
      </p>
    </div>

    <!-- Contact Information - Compact Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 mb-12 md:mb-16">
      <!-- Email -->
      <a 
        href={`mailto:${contactInfo.email}`}
        class="group p-4 md:p-6 bg-white dark:bg-gray-800/50 rounded-xl md:rounded-2xl border border-gray-200 dark:border-gray-700/50 hover:border-blue-300 dark:hover:border-blue-600 transition-all duration-300 hover:shadow-md"
      >
        <div class="flex flex-col items-center gap-3 text-center">
          <div class="w-10 h-10 md:w-12 md:h-12 bg-blue-100 dark:bg-blue-900/30 rounded-lg md:rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
            <PiEnvelopeDuotone className="w-5 h-5 md:w-6 md:h-6 text-blue-600 dark:text-blue-400" />
          </div>
          <div class="min-w-0">
            <p class="text-xs md:text-sm text-gray-600 dark:text-gray-400 mb-1">
              {lang === 'es' ? 'Email' : 'Email'}
            </p>
            <p class="text-sm md:text-base font-medium text-blue-600 dark:text-blue-400 break-all">
              {contactInfo.email}
            </p>
          </div>
        </div>
      </a>

      <!-- Phone -->
      <a 
        href={`tel:${contactInfo.phone}`}
        class="group p-4 md:p-6 bg-white dark:bg-gray-800/50 rounded-xl md:rounded-2xl border border-gray-200 dark:border-gray-700/50 hover:border-green-300 dark:hover:border-green-600 transition-all duration-300 hover:shadow-md"
      >
        <div class="flex flex-col items-center gap-3 text-center">
          <div class="w-10 h-10 md:w-12 md:h-12 bg-green-100 dark:bg-green-900/30 rounded-lg md:rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
            <PiPhoneDuotone className="w-5 h-5 md:w-6 md:h-6 text-green-600 dark:text-green-400" />
          </div>
          <div>
            <p class="text-xs md:text-sm text-gray-600 dark:text-gray-400 mb-1">
              {lang === 'es' ? 'Teléfono' : 'Phone'}
            </p>
            <p class="text-sm md:text-base font-medium text-green-600 dark:text-green-400">
              {contactInfo.phone}
            </p>
          </div>
        </div>
      </a>

      <!-- Location -->
      <div class="group p-4 md:p-6 bg-white dark:bg-gray-800/50 rounded-xl md:rounded-2xl border border-gray-200 dark:border-gray-700/50">
        <div class="flex flex-col items-center gap-3 text-center">
          <div class="w-10 h-10 md:w-12 md:h-12 bg-purple-100 dark:bg-purple-900/30 rounded-lg md:rounded-xl flex items-center justify-center">
            <PiMapPinDuotone className="w-5 h-5 md:w-6 md:h-6 text-purple-600 dark:text-purple-400" />
          </div>
          <div>
            <p class="text-xs md:text-sm text-gray-600 dark:text-gray-400 mb-1">
              {lang === 'es' ? 'Ubicación' : 'Location'}
            </p>
            <p class="text-sm md:text-base font-medium text-gray-900 dark:text-white">
              {contactInfo.location}
            </p>
            <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">{contactInfo.timezone}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Social Links -->
    <div class="mb-12 md:mb-16">
      <h2 class="text-lg md:text-xl font-semibold text-gray-900 dark:text-white text-center mb-6">
        {lang === 'es' ? 'Conecta conmigo' : 'Connect with me'}
      </h2>
      <div class="flex justify-center gap-3 md:gap-4 flex-wrap">
        {socialLinks.map((social) => (
          <a 
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group w-12 h-12 md:w-14 md:h-14 flex items-center justify-center rounded-lg md:rounded-xl bg-white dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700/50 hover:border-gray-300 dark:hover:border-gray-600 hover:shadow-md transition-all duration-300 hover:scale-110"
            title={social.name}
          >
            {social.icon === 'github' && (
              <PiGithubLogoDuotone className="w-6 h-6 text-gray-600 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white transition-colors" />
            )}
            {social.icon === 'linkedin' && (
              <PiLinkedinLogoDuotone className="w-6 h-6 text-gray-600 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors" />
            )}
            {social.icon === 'twitter' && (
              <PiXLogoDuotone className="w-6 h-6 text-gray-600 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white transition-colors" />
            )}
            {social.icon === 'instagram' && (
              <PiInstagramLogoDuotone className="w-6 h-6 text-gray-600 dark:text-gray-400 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors" />
            )}
          </a>
        ))}
      </div>
    </div>

    <!-- CV Download -->
    <div class="bg-white dark:bg-gray-800/50 rounded-2xl p-6 md:p-8 border border-gray-200 dark:border-gray-700/50 text-center">
      <h3 class="text-lg md:text-xl font-semibold text-gray-900 dark:text-white mb-3">
        {lang === 'es' ? 'Descarga mi CV' : 'Download my Resume'}
      </h3>
      <p class="text-sm md:text-base text-gray-600 dark:text-gray-400 mb-5">
        {lang === 'es' 
          ? 'Obtén una visión completa de mi experiencia y habilidades.' 
          : 'Get a complete view of my experience and skills.'}
      </p>
      <a 
        href="/assets/documents/davidherrera-spanish.pdf"
        download="davidherrera-spanish.pdf"
        class="inline-flex items-center gap-2 px-5 md:px-6 py-2.5 md:py-3 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-lg md:rounded-xl font-medium hover:shadow-md transition-all duration-300 hover:scale-105"
      >
        <PiDownloadDuotone className="w-4 h-4 md:w-5 md:h-5" />
        <span class="text-sm md:text-base">
          {lang === 'es' ? 'Descargar' : 'Download'}
        </span>
      </a>
    </div>

    <!-- Availability -->
    <div class="mt-10 md:mt-12 text-center">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800/50 rounded-full">
        <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
        <span class="text-xs md:text-sm text-green-700 dark:text-green-300 font-medium">
          {contactInfo.availability}
        </span>
      </div>
    </div>
  </div>
</main>
