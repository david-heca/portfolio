---
import { useTranslations } from "../../i18n/utils";
import {
  PiGraduationCap,
  PiCertificate,
  PiCalendar,
  PiMapPin,
  PiChartBar,
  PiArrowUpRight,
  PiBooks,
  PiLightning,
  PiStar,
  PiTrophy,
} from "react-icons/pi";

export interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const education = [
  {
    id: 1,
    type: "education",
    institution:
      "Platzi - " +
      (lang === "es" ? "Escuela de Tecnología" : "Technology School"),
    degree:
      lang === "es" ? "Industria de la Tecnología" : "Technology Industry",
    period: lang === "es" ? "2022 - Actualidad" : "2022 - Present",
    status: lang === "es" ? "Autodidacta" : "Self-taught",
    description:
      lang === "es"
        ? "Cursos especializados en desarrollo web, inteligencia artificial y tecnologías emergentes."
        : "Specialized courses in web development, artificial intelligence and emerging technologies.",
    grade: "N/A",
    location: "Online",
    icon: PiLightning,
    accent: "emerald",
  },
  {
    id: 2,
    type: "education",
    institution:
      lang === "es"
        ? "Tecnológico de Estudios Superiores de Coacalco (TESCo) - TecNM"
        : "Technological Institute of Higher Studies of Coacalco (TESCo) - TecNM",
    degree:
      lang === "es"
        ? "Ingeniería en Tecnologías de la Información y Comunicaciones"
        : "Information and Communication Technologies Engineering",
    period: "2018 - 2022",
    status: lang === "es" ? "Graduado" : "Graduate",
    description:
      lang === "es"
        ? "Especialización en desarrollo de aplicaciones móviles."
        : "Specialization in mobile application development.",
    grade: "96/100",
    location:
      lang === "es" ? "Estado de México, México" : "Mexico State, Mexico",
    icon: PiGraduationCap,
    accent: "blue",
  },
  {
    id: 3,
    type: "education",
    institution:
      lang === "es"
        ? "Colegio de Estudios Científicos y Tecnológicos del Estado de México (CECyTEM) - Tultepec"
        : "College of Scientific and Technological Studies of the State of Mexico (CECyTEM) - Tultepec",
    degree:
      lang === "es" ? "Técnico en Programación" : "Programming Technician",
    period: "2016 - 2018",
    status: lang === "es" ? "Graduado" : "Graduate",
    description:
      lang === "es"
        ? "Formación especializada en desarrollo de software y metodologías de desarrollo."
        : "Specialized training in software development and development methodologies.",
    grade: "8.8/10",
    location:
      lang === "es" ? "Estado de México, México" : "Mexico State, Mexico",
    icon: PiBooks,
    accent: "violet",
  },
];

const certifications = [
  {
    id: 1,
    name: "Azure AZ-900: Microsoft Azure Fundamentals",
    issuer: "Microsoft",
    date: "2024",
    credentialId: "AZ-900-123456",
    verifyUrl:
      "https://www.certiport.com/portal/Pages/PrintTranscriptInfo.aspx?action=Cert&id=414&cvid=r+dkpNaAIMQHhll3/TFLLw==",
    skills: ["Azure", "Cloud Computing", "Networking", "Security"],
    level: lang === "es" ? "Fundamentals" : "Fundamentals",
    featured: true,
  },
  {
    id: 2,
    name: "Python for Everybody Specialization",
    issuer: "Michigan University",
    date: "2022",
    credentialId: "J7EMYHGRRUH8",
    verifyUrl:
      "https://www.coursera.org/account/accomplishments/verify/J7EMYHGRRUH8",
    skills: ["Python", "Data Structures", "SQL"],
    level: lang === "es" ? "Fundamentals" : "Fundamentals",
    featured: true,
  },
  {
    id: 3,
    name:
      lang === "es"
        ? "Introducción a la Inteligencia Artificial"
        : "Introduction to Artificial Intelligence",
    issuer: "Platzi",
    date: "2023",
    credentialId: "bb841264-3516-4421-a1e2-5f5902c117ee",
    verifyUrl:
      "https://platzi.com/p/david-heca/curso/11157-introduccion-ai/diploma/detalle/",
    skills: ["AI", "Machine Learning", "Data Science"],
    level: lang === "es" ? "Fundamentals" : "Fundamentals",
    featured: false,
  },
  {
    id: 4,
    name:
      lang === "es"
        ? "Desarrollo de Chatbots con Azure OpenAI"
        : "Chatbot Development with Azure OpenAI",
    issuer: "Platzi",
    date: "2023",
    credentialId: "60c81aa1-626e-4a7c-9842-8b4a2fabc165",
    verifyUrl:
      "https://platzi.com/p/david-heca/curso/8946-azureopenia/diploma/detalle/",
    skills: ["Chatbots", "Azure", "OpenAI"],
    level: lang === "es" ? "Intermedio" : "Intermediate",
    featured: false,
  },
  {
    id: 5,
    name:
      lang === "es"
        ? "Introducción a la Terminal y Línea de Comandos"
        : "Introduction to Terminal and Command Line",
    issuer: "Platzi",
    date: "2023",
    credentialId: "5584d92c-c845-442e-819b-2b31a747f230",
    verifyUrl:
      "https://platzi.com/p/david-heca/curso/2292-terminal/diploma/detalle/",
    skills: ["Terminal", "Command Line", "Linux"],
    level: lang === "es" ? "Fundamentals" : "Fundamentals",
    featured: false,
  },
];

const featuredCerts = certifications.filter((c) => c.featured);
const otherCerts = certifications.filter((c) => !c.featured);
---

<section class="min-h-screen px-4 pt-20 pb-20">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1
        class="text-4xl md:text-5xl font-bold text-zinc-900 dark:text-white mb-4"
      >
        {t("education.title")}
      </h1>
      <p class="text-lg text-zinc-500 dark:text-zinc-400 max-w-2xl mx-auto">
        {t("education.subtitle")}
      </p>
    </div>

    <!-- Bento Grid Layout -->
    <div class="grid grid-cols-12 gap-4 md:gap-6">
      <!-- Section Header: Academic Background -->
      <div class="col-span-12 mb-2">
        <div class="flex items-center gap-3">
          <div
            class="w-10 h-10 rounded-2xl bg-zinc-100 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 flex items-center justify-center"
          >
            <PiGraduationCap
              className="w-5 h-5 text-zinc-600 dark:text-zinc-400"
            />
          </div>
          <h2 class="text-xl font-semibold text-zinc-900 dark:text-white">
            {lang === "es" ? "Formación Académica" : "Academic Background"}
          </h2>
        </div>
      </div>

      <!-- Education Cards -->
      {
        education.map((edu, index) => (
          <div
            class={`col-span-12 ${index === 0 ? "lg:col-span-12" : "lg:col-span-6"} group`}
          >
            <div class="h-full bg-zinc-50 dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-3xl p-6 md:p-8 transition-all duration-300 hover:border-zinc-300 dark:hover:border-zinc-700 hover:shadow-lg">
              <div class="flex flex-col h-full">
                {/* Header with Icon and Status */}
                <div class="flex items-start justify-between mb-6">
                  <div
                    class={`w-14 h-14 rounded-2xl flex items-center justify-center ${
                      edu.accent === "emerald"
                        ? "bg-emerald-500/10 dark:bg-emerald-500/20"
                        : edu.accent === "blue"
                          ? "bg-blue-500/10 dark:bg-blue-500/20"
                          : "bg-violet-500/10 dark:bg-violet-500/20"
                    }`}
                  >
                    <edu.icon
                      className={`w-7 h-7 ${
                        edu.accent === "emerald"
                          ? "text-emerald-600 dark:text-emerald-400"
                          : edu.accent === "blue"
                            ? "text-blue-600 dark:text-blue-400"
                            : "text-violet-600 dark:text-violet-400"
                      }`}
                    />
                  </div>
                  <span
                    class={`px-3 py-1.5 rounded-full text-xs font-medium ${
                      edu.status.includes("Autodidacta") ||
                      edu.status.includes("Self")
                        ? "bg-emerald-500/10 text-emerald-600 dark:text-emerald-400 border border-emerald-500/20"
                        : "bg-blue-500/10 text-blue-600 dark:text-blue-400 border border-blue-500/20"
                    }`}
                  >
                    {edu.status}
                  </span>
                </div>

                {/* Content */}
                <div class="flex-1">
                  <h3 class="text-xl md:text-2xl font-bold text-zinc-900 dark:text-white mb-2 group-hover:text-zinc-700 dark:group-hover:text-zinc-200 transition-colors">
                    {edu.degree}
                  </h3>
                  <p class="text-zinc-600 dark:text-zinc-400 font-medium mb-4">
                    {edu.institution}
                  </p>
                  <p class="text-zinc-500 dark:text-zinc-500 text-sm leading-relaxed mb-6">
                    {edu.description}
                  </p>
                </div>

                {/* Meta Info */}
                <div class="grid grid-cols-3 gap-4 pt-6 border-t border-zinc-200 dark:border-zinc-800">
                  <div class="flex items-center gap-2">
                    <PiCalendar className="w-4 h-4 text-zinc-400" />
                    <span class="text-sm text-zinc-600 dark:text-zinc-400">
                      {edu.period}
                    </span>
                  </div>
                  <div class="flex items-center gap-2">
                    <PiMapPin className="w-4 h-4 text-zinc-400" />
                    <span class="text-sm text-zinc-600 dark:text-zinc-400 truncate">
                      {edu.location}
                    </span>
                  </div>
                  <div class="flex items-center gap-2">
                    <PiChartBar className="w-4 h-4 text-zinc-400" />
                    <span class="text-sm text-zinc-600 dark:text-zinc-400">
                      {edu.grade}
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))
      }

      <!-- Section Header: Certifications -->
      <div class="col-span-12 mt-8 mb-2">
        <div class="flex items-center gap-3">
          <div
            class="w-10 h-10 rounded-2xl bg-zinc-100 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 flex items-center justify-center"
          >
            <PiCertificate
              className="w-5 h-5 text-zinc-600 dark:text-zinc-400"
            />
          </div>
          <h2 class="text-xl font-semibold text-zinc-900 dark:text-white">
            {lang === "es" ? "Certificaciones" : "Certifications"}
          </h2>
        </div>
      </div>

      <!-- Featured Certifications -->
      {
        featuredCerts.map((cert) => (
          <div class="col-span-12 md:col-span-6 group">
            <a
              href={cert.verifyUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="block h-full"
            >
              <div class="h-full bg-gradient-to-br from-zinc-50 to-zinc-100 dark:from-zinc-900 dark:to-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-3xl p-6 transition-all duration-300 hover:border-zinc-300 dark:hover:border-zinc-600 hover:shadow-xl hover:-translate-y-1">
                <div class="flex flex-col h-full">
                  {/* Header */}
                  <div class="flex items-start justify-between mb-4">
                    <div class="w-12 h-12 rounded-2xl bg-amber-500/10 dark:bg-amber-500/20 flex items-center justify-center">
                      <PiTrophy className="w-6 h-6 text-amber-600 dark:text-amber-400" />
                    </div>
                    <div class="flex items-center gap-2">
                      <PiStar className="w-4 h-4 text-amber-500" />
                      <span class="text-xs text-zinc-500 dark:text-zinc-400">
                        Featured
                      </span>
                    </div>
                  </div>

                  {/* Content */}
                  <div class="flex-1">
                    <h3 class="text-lg font-bold text-zinc-900 dark:text-white mb-2 group-hover:text-zinc-700 dark:group-hover:text-zinc-200 transition-colors leading-tight">
                      {cert.name}
                    </h3>
                    <p class="text-zinc-600 dark:text-zinc-400 text-sm mb-4">
                      {cert.issuer} • {cert.date}
                    </p>

                    {/* Skills */}
                    <div class="flex flex-wrap gap-2 mb-4">
                      {cert.skills.map((skill) => (
                        <span class="px-2.5 py-1 bg-zinc-200/50 dark:bg-zinc-700/50 text-zinc-700 dark:text-zinc-300 rounded-lg text-xs">
                          {skill}
                        </span>
                      ))}
                    </div>
                  </div>

                  {/* Footer */}
                  <div class="flex items-center justify-between pt-4 border-t border-zinc-200 dark:border-zinc-700">
                    <span class="text-xs text-zinc-400 font-mono">
                      {cert.credentialId.slice(0, 12)}...
                    </span>
                    <span class="flex items-center gap-1 text-sm text-zinc-600 dark:text-zinc-400 group-hover:text-zinc-900 dark:group-hover:text-white transition-colors">
                      {lang === "es" ? "Ver credencial" : "View credential"}
                      <PiArrowUpRight className="w-4 h-4 group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-transform" />
                    </span>
                  </div>
                </div>
              </div>
            </a>
          </div>
        ))
      }

      <!-- Other Certifications -->
      {
        otherCerts.map((cert) => (
          <div class="col-span-12 sm:col-span-6 lg:col-span-4 group">
            <a
              href={cert.verifyUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="block h-full"
            >
              <div class="h-full bg-zinc-50 dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-3xl p-5 transition-all duration-300 hover:border-zinc-300 dark:hover:border-zinc-700 hover:shadow-lg hover:-translate-y-1">
                {/* Header */}
                <div class="flex items-start justify-between mb-4">
                  <div class="w-10 h-10 rounded-xl bg-zinc-200/50 dark:bg-zinc-800 flex items-center justify-center">
                    <PiCertificate className="w-5 h-5 text-zinc-600 dark:text-zinc-400" />
                  </div>
                  <span
                    class={`px-2 py-1 rounded-full text-xs font-medium ${
                      cert.level.includes("Intermedio") ||
                      cert.level.includes("Intermediate")
                        ? "bg-violet-500/10 text-violet-600 dark:text-violet-400"
                        : "bg-zinc-200/50 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-400"
                    }`}
                  >
                    {cert.level}
                  </span>
                </div>

                {/* Content */}
                <h3 class="text-base font-semibold text-zinc-900 dark:text-white mb-2 group-hover:text-zinc-700 dark:group-hover:text-zinc-200 transition-colors leading-tight line-clamp-2">
                  {cert.name}
                </h3>
                <p class="text-zinc-500 dark:text-zinc-500 text-sm mb-4">
                  {cert.issuer} • {cert.date}
                </p>

                {/* Skills */}
                <div class="flex flex-wrap gap-1.5 mb-4">
                  {cert.skills.slice(0, 3).map((skill) => (
                    <span class="px-2 py-0.5 bg-zinc-200/50 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-400 rounded text-xs">
                      {skill}
                    </span>
                  ))}
                </div>

                {/* Link indicator */}
                <div class="flex items-center gap-1 text-xs text-zinc-400 group-hover:text-zinc-600 dark:group-hover:text-zinc-300 transition-colors">
                  <span>{lang === "es" ? "Verificar" : "Verify"}</span>
                  <PiArrowUpRight className="w-3 h-3 group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-transform" />
                </div>
              </div>
            </a>
          </div>
        ))
      }

      <!-- Stats Card -->
      <div class="col-span-12 mt-4">
        <div
          class="bg-zinc-50 dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-3xl p-6"
        >
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div class="text-center">
              <p class="text-3xl font-bold text-zinc-900 dark:text-white mb-1">
                3
              </p>
              <p class="text-sm text-zinc-500 dark:text-zinc-400">
                {lang === "es" ? "Títulos" : "Degrees"}
              </p>
            </div>
            <div class="text-center">
              <p class="text-3xl font-bold text-zinc-900 dark:text-white mb-1">
                5+
              </p>
              <p class="text-sm text-zinc-500 dark:text-zinc-400">
                {lang === "es" ? "Certificaciones" : "Certifications"}
              </p>
            </div>
            <div class="text-center">
              <p class="text-3xl font-bold text-zinc-900 dark:text-white mb-1">
                8+
              </p>
              <p class="text-sm text-zinc-500 dark:text-zinc-400">
                {lang === "es" ? "Años aprendiendo" : "Years learning"}
              </p>
            </div>
            <div class="text-center">
              <p
                class="text-3xl font-bold text-emerald-600 dark:text-emerald-400 mb-1"
              >
                ∞
              </p>
              <p class="text-sm text-zinc-500 dark:text-zinc-400">
                {lang === "es" ? "Curiosidad" : "Curiosity"}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
