---
import { useTranslations } from '../../i18n/utils';

export interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const education = [
  {
    id: 1,
    type: "education",
    institution: "Platzi - " + (lang === 'es' ? "Escuela de Tecnología" : "Technology School"),
    degree: lang === 'es' ? "Industria de la Tecnología" : "Technology Industry",
    period: lang === 'es' ? "2022 - Actualidad" : "2022 - Present",
    status: lang === 'es' ? "Autodidacta" : "Self-taught",
    description: lang === 'es' 
      ? "Cursos especializados en desarrollo web, inteligencia artificial y tecnologías emergentes."
      : "Specialized courses in web development, artificial intelligence and emerging technologies.",
    grade: "N/A",
    location: "Online"  
  },
  {
    id: 2,
    type: "education",
    institution: lang === 'es' 
      ? "Tecnológico de Estudios Superiores de Coacalco (TESCo) - TecNM"
      : "Technological Institute of Higher Studies of Coacalco (TESCo) - TecNM",
    degree: lang === 'es' 
      ? "Ingeniería en Tecnologías de la Información y Comunicaciones"
      : "Information and Communication Technologies Engineering",
    period: "2018 - 2022",
    status: lang === 'es' ? "Graduado" : "Graduate",
    description: lang === 'es'
      ? "Especialización en desarrollo de aplicaciones móviles."
      : "Specialization in mobile application development.",
    grade: "96/100",
    location: lang === 'es' ? "Estado de México, México" : "Mexico State, Mexico"
  },
  {
    id: 3,
    type: "education",
    institution: lang === 'es'
      ? "Colegio de Estudios Científicos y Tecnológicos del Estado de México (CECyTEM) - Tultepec"
      : "College of Scientific and Technological Studies of the State of Mexico (CECyTEM) - Tultepec",
    degree: lang === 'es' ? "Técnico en Programación" : "Programming Technician",
    period: "2016 - 2018",
    status: lang === 'es' ? "Graduado" : "Graduate",
    description: lang === 'es'
      ? "Formación especializada en desarrollo de software y metodologías de desarrollo."
      : "Specialized training in software development and development methodologies.",
    grade: "8.8/10",
    location: lang === 'es' ? "Estado de México, México" : "Mexico State, Mexico"
  }
];

const certifications = [
  {
    id: 1,
    name: "Azure AZ-900: Microsoft Azure Fundamentals",
    issuer: "Microsoft",
    date: "2024",
    credentialId: "AZ-900-123456",
    verifyUrl: "https://www.certiport.com/portal/Pages/PrintTranscriptInfo.aspx?action=Cert&id=414&cvid=r+dkpNaAIMQHhll3/TFLLw==",
    skills: ["Azure", "Cloud Computing", "Networking", "Security"],
    level: lang === 'es' ? "Fundamentals" : "Fundamentals"
  },
  {
    id: 2,
    name: "Python for Everybody Specialization",
    issuer: "Michigan University",
    date: "2022",
    credentialId: "J7EMYHGRRUH8",
    verifyUrl: "https://www.coursera.org/account/accomplishments/verify/J7EMYHGRRUH8",
    skills: ["Python", "Data Structures", "SQL"],
    level: lang === 'es' ? "Fundamentals" : "Fundamentals"
  },
  {
    id: 3,
    name: lang === 'es' ? "Introducción a la Inteligencia Artificial" : "Introduction to Artificial Intelligence",
    issuer: "Platzi",
    date: "2023",
    credentialId: "bb841264-3516-4421-a1e2-5f5902c117ee",
    verifyUrl: "https://platzi.com/p/david-heca/curso/11157-introduccion-ai/diploma/detalle/",
    skills: ["AI", "Machine Learning", "Data Science"],
    level: lang === 'es' ? "Fundamentals" : "Fundamentals"
  },
  {
    id: 4,
    name: lang === 'es' ? "Desarrollo de Chatbots con Azure OpenAI" : "Chatbot Development with Azure OpenAI",
    issuer: "Platzi",
    date: "2023",
    credentialId: "60c81aa1-626e-4a7c-9842-8b4a2fabc165",
    verifyUrl: "https://platzi.com/p/david-heca/curso/8946-azureopenia/diploma/detalle/",
    skills: ["Chatbots", "Azure", "OpenAI"],
    level: lang === 'es' ? "Intermedio" : "Intermediate"
  },
  {
    id: 5,
    name: lang === 'es' ? "Introducción a la Terminal y Línea de Comandos" : "Introduction to Terminal and Command Line",
    issuer: "Platzi",
    date: "2023",
    credentialId: "5584d92c-c845-442e-819b-2b31a747f230",
    verifyUrl: "https://platzi.com/p/david-heca/curso/2292-terminal/diploma/detalle/",
    skills: ["Terminal", "Command Line", "Linux"],
    level: lang === 'es' ? "Fundamentals" : "Fundamentals"
  }
];
---

<main class="min-h-screen px-4 pt-32 pb-20">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        {t.education.title}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        {t.education.subtitle}
      </p>
    </div>
    
    <!-- Formación académica -->
    <div class="mb-20">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        {lang === 'es' ? 'Formación Académica' : 'Academic Background'}
      </h2>
      
      <div class="max-w-4xl mx-auto space-y-8">
        {education.map((edu, index) => (
          <div class="group bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 md:p-8 rounded-2xl transition-all duration-300 hover:shadow-xl hover:border-blue-400 dark:hover:border-blue-400">
            {/* Header */}
            <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4 mb-6">
              <div class="flex-1">
                <h3 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {edu.degree}
                </h3>
                <p class="text-blue-500 font-semibold mb-3">{edu.institution}</p>
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">{edu.description}</p>
              </div>
              
              {/* Status badge */}
              <div class="flex-shrink-0">
                <span class="px-4 py-2 bg-green-100 dark:bg-green-900/20 border border-green-200 dark:border-green-400/30 text-green-700 dark:text-green-300 rounded-full text-sm font-medium">
                  {edu.status}
                </span>
              </div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 pt-4 border-t border-gray-200 dark:border-gray-700">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <span class="text-blue-600 dark:text-blue-400 text-lg">📅</span>
                </div>
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                    {lang === 'es' ? 'Período' : 'Period'}
                  </p>
                  <p class="text-gray-900 dark:text-white font-medium">{edu.period}</p>
                </div>
              </div>

              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-purple-100 dark:bg-purple-900/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <span class="text-purple-600 dark:text-purple-400 text-lg">📍</span>
                </div>
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                    {lang === 'es' ? 'Ubicación' : 'Location'}
                  </p>
                  <p class="text-gray-900 dark:text-white font-medium text-sm">{edu.location}</p>
                </div>
              </div>

              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-yellow-100 dark:bg-yellow-900/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <span class="text-yellow-600 dark:text-yellow-400 text-lg">📊</span>
                </div>
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                    {lang === 'es' ? 'Calificación' : 'Grade'}
                  </p>
                  <p class="text-gray-900 dark:text-white font-medium">{edu.grade}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Certificaciones -->
    <div>
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        {lang === 'es' ? 'Certificaciones & Cursos' : 'Certifications & Courses'}
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {certifications.map((cert, index) => (
          <div class="group bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-2xl transition-all duration-300 hover:shadow-lg hover:border-blue-400 dark:hover:border-blue-400 hover:scale-105">
            {/* Header */}
            <div class="flex items-start justify-between mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900/20 dark:to-purple-900/20 rounded-xl flex items-center justify-center border border-gray-200 dark:border-gray-600 group-hover:border-blue-400 dark:group-hover:border-blue-400 transition-colors flex-shrink-0">
                <span class="text-2xl">🏆</span>
              </div>
              <span class={`px-3 py-1 rounded-full text-xs font-medium ${
                cert.level === 'Fundamentals' 
                  ? 'bg-blue-100 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300' 
                  : 'bg-purple-100 dark:bg-purple-900/20 text-purple-700 dark:text-purple-300'
              }`}>
                {cert.level}
              </span>
            </div>
            
            {/* Content */}
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors leading-tight">
              {cert.name}
            </h3>
            <p class="text-blue-500 font-medium text-sm mb-3">{cert.issuer}</p>
            
            {/* Skills tags */}
            <div class="mb-4">
              <div class="flex flex-wrap gap-2">
                {cert.skills.map((skill) => (
                  <span class="px-2.5 py-1 bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg text-xs hover:bg-gray-200 dark:hover:bg-gray-600 hover:border-blue-400 dark:hover:border-blue-400 hover:text-blue-600 dark:hover:text-blue-400 transition-all duration-200 cursor-default">
                    {skill}
                  </span>
                ))}
              </div>
            </div>

            {/* Footer */}
            <div class="pt-4 border-t border-gray-200 dark:border-gray-700 space-y-2">
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-600 dark:text-gray-400 font-medium">{cert.date}</span>
                <a 
                  href={cert.verifyUrl} 
                  target="_blank" 
                  class="inline-flex items-center gap-1 text-blue-500 hover:text-blue-600 dark:hover:text-blue-400 transition-colors hover:underline font-medium"
                >
                  {lang === 'es' ? 'Verificar' : 'Verify'}
                  <span class="text-sm">↗</span>
                </a>
              </div>
              <p class="text-xs text-gray-500 dark:text-gray-400 font-mono bg-gray-50 dark:bg-gray-700 px-2 py-1 rounded">
                ID: {cert.credentialId}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</main>
