---
import { useTranslations } from "../../i18n/utils";
import {
  PiMapPin,
  PiBriefcase,
  PiGraduationCap,
  PiTranslate,
  PiSparkle,
  PiCode,
  PiLightbulb,
  PiRocket,
  PiHeart,
  PiCoffee,
  PiGameController,
  PiMusicNote,
} from "react-icons/pi";

export interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const quickFacts = [
  {
    icon: PiMapPin,
    label: lang === "es" ? "Ciudad de México" : "Mexico City",
    color: "blue",
  },
  {
    icon: PiBriefcase,
    label: lang === "es" ? "3+ años exp." : "3+ years exp.",
    color: "emerald",
  },
  {
    icon: PiGraduationCap,
    label: lang === "es" ? "Ing. TIC" : "IT Engineer",
    color: "violet",
  },
  {
    icon: PiTranslate,
    label: "ES / EN",
    color: "amber",
  },
];

const expertise = [
  {
    icon: PiSparkle,
    title:
      lang === "es" ? "Inteligencia Artificial" : "Artificial Intelligence",
    description:
      lang === "es"
        ? "Explorando cómo la IA puede resolver problemas reales y crear valor tangible."
        : "Exploring how AI can solve real problems and create tangible value.",
    color: "blue",
  },
  {
    icon: PiCode,
    title: lang === "es" ? "Desarrollo Full-Stack" : "Full-Stack Development",
    description:
      lang === "es"
        ? "Construyendo aplicaciones con C#, Python, React y bases de datos modernas."
        : "Building applications with C#, Python, React and modern databases.",
    color: "emerald",
  },
  {
    icon: PiLightbulb,
    title: lang === "es" ? "Aprendizaje Continuo" : "Continuous Learning",
    description:
      lang === "es"
        ? "Siempre probando nuevas tecnologías y compartiendo conocimientos."
        : "Always testing new technologies and sharing knowledge.",
    color: "violet",
  },
];

const interests = [
  { icon: PiCoffee, label: lang === "es" ? "Café" : "Coffee" },
  { icon: PiGameController, label: "Gaming" },
  { icon: PiMusicNote, label: lang === "es" ? "Música" : "Music" },
  { icon: PiRocket, label: "Tech" },
];
---

<main class="min-h-screen px-4 pt-32 pb-20">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1
        class="text-4xl md:text-5xl font-bold text-zinc-900 dark:text-white mb-4"
      >
        {t("about.title")}
      </h1>
      <p class="text-lg text-zinc-500 dark:text-zinc-400">
        {t("about.subtitle")}
      </p>
    </div>

    <!-- Bento Grid -->
    <div class="grid grid-cols-12 gap-4 md:gap-6">
      <!-- Profile Photo Card - Large -->
      <div class="col-span-12 md:col-span-5 lg:col-span-4">
        <div
          class="h-full bg-zinc-50 dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-3xl p-4 overflow-hidden"
        >
          <div class="relative aspect-[4/5] w-full">
            <img
              src="/assets/profile-photo.webp"
              alt="David Herrera"
              class="w-full h-full object-cover rounded-2xl"
            />
            <!-- Gradient overlay -->
            <div
              class="absolute inset-0 rounded-2xl bg-gradient-to-t from-zinc-900/60 via-transparent to-transparent"
            >
            </div>
            <!-- Name overlay -->
            <div class="absolute bottom-4 left-4 right-4">
              <h2 class="text-2xl font-bold text-white mb-1">David Herrera</h2>
              <p class="text-zinc-300 text-sm">
                {
                  lang === "es"
                    ? "Desarrollador de Software"
                    : "Software Developer"
                }
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Bio Card -->
      <div class="col-span-12 md:col-span-7 lg:col-span-8">
        <div
          class="h-full bg-zinc-50 dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-3xl p-6 md:p-8"
        >
          <div class="flex items-center gap-3 mb-6">
            <div
              class="w-10 h-10 rounded-2xl bg-zinc-200/50 dark:bg-zinc-800 flex items-center justify-center"
            >
              <PiHeart className="w-5 h-5 text-zinc-600 dark:text-zinc-400" />
            </div>
            <h3 class="text-lg font-semibold text-zinc-900 dark:text-white">
              {lang === "es" ? "Sobre mí" : "About me"}
            </h3>
          </div>

          <div class="space-y-4">
            {
              lang === "es" ? (
                <>
                  <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                    Soy desarrollador de software. Me gusta entender cómo
                    funcionan las cosas y buscar maneras de hacerlas más simples
                    o eficientes.
                  </p>
                  <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                    Últimamente he estado explorando{" "}
                    <span class="text-zinc-900 dark:text-white font-medium">
                      datos
                    </span>{" "}
                    y{" "}
                    <span class="text-zinc-900 dark:text-white font-medium">
                      inteligencia artificial
                    </span>
                    , buscando cómo estas herramientas pueden aportar valor real
                    a los proyectos.
                  </p>
                  <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                    He trabajado con{" "}
                    <span class="text-zinc-900 dark:text-white font-medium">
                      C#
                    </span>
                    ,{" "}
                    <span class="text-zinc-900 dark:text-white font-medium">
                      Python
                    </span>
                    ,{" "}
                    <span class="text-zinc-900 dark:text-white font-medium">
                      bases de datos
                    </span>{" "}
                    y{" "}
                    <span class="text-zinc-900 dark:text-white font-medium">
                      cloud
                    </span>
                    . Siempre estoy aprendiendo algo nuevo.
                  </p>
                </>
              ) : (
                <>
                  <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                    I'm a software developer. I like to understand how things
                    work and find ways to make them simpler or more efficient.
                  </p>
                  <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                    Lately I've been exploring{" "}
                    <span class="text-zinc-900 dark:text-white font-medium">
                      data
                    </span>{" "}
                    and{" "}
                    <span class="text-zinc-900 dark:text-white font-medium">
                      artificial intelligence
                    </span>
                    , looking for how these tools can add real value to
                    projects.
                  </p>
                  <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                    I've worked with{" "}
                    <span class="text-zinc-900 dark:text-white font-medium">
                      C#
                    </span>
                    ,{" "}
                    <span class="text-zinc-900 dark:text-white font-medium">
                      Python
                    </span>
                    ,{" "}
                    <span class="text-zinc-900 dark:text-white font-medium">
                      databases
                    </span>{" "}
                    and{" "}
                    <span class="text-zinc-900 dark:text-white font-medium">
                      cloud
                    </span>
                    . I'm always learning something new.
                  </p>
                </>
              )
            }
          </div>
        </div>
      </div>

      <!-- Quick Facts - Row of 4 -->
      {
        quickFacts.map((fact) => (
          <div class="col-span-6 sm:col-span-3">
            <div class="h-full bg-zinc-50 dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-3xl p-5 transition-all duration-300 hover:border-zinc-300 dark:hover:border-zinc-700">
              <div
                class={`w-10 h-10 rounded-xl mb-3 flex items-center justify-center ${
                  fact.color === "blue"
                    ? "bg-blue-500/10 dark:bg-blue-500/20"
                    : fact.color === "emerald"
                      ? "bg-emerald-500/10 dark:bg-emerald-500/20"
                      : fact.color === "violet"
                        ? "bg-violet-500/10 dark:bg-violet-500/20"
                        : "bg-amber-500/10 dark:bg-amber-500/20"
                }`}
              >
                <fact.icon
                  className={`w-5 h-5 ${
                    fact.color === "blue"
                      ? "text-blue-600 dark:text-blue-400"
                      : fact.color === "emerald"
                        ? "text-emerald-600 dark:text-emerald-400"
                        : fact.color === "violet"
                          ? "text-violet-600 dark:text-violet-400"
                          : "text-amber-600 dark:text-amber-400"
                  }`}
                />
              </div>
              <p class="text-sm font-medium text-zinc-900 dark:text-white">
                {fact.label}
              </p>
            </div>
          </div>
        ))
      }

      <!-- Expertise Cards -->
      {
        expertise.map((item, index) => (
          <div
            class={`col-span-12 ${index === 0 ? "md:col-span-6 lg:col-span-4" : index === 1 ? "md:col-span-6 lg:col-span-4" : "md:col-span-12 lg:col-span-4"}`}
          >
            <div class="h-full bg-zinc-50 dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-3xl p-6 transition-all duration-300 hover:border-zinc-300 dark:hover:border-zinc-700 hover:shadow-lg group">
              <div
                class={`w-12 h-12 rounded-2xl mb-4 flex items-center justify-center ${
                  item.color === "blue"
                    ? "bg-blue-500/10 dark:bg-blue-500/20"
                    : item.color === "emerald"
                      ? "bg-emerald-500/10 dark:bg-emerald-500/20"
                      : "bg-violet-500/10 dark:bg-violet-500/20"
                }`}
              >
                <item.icon
                  className={`w-6 h-6 transition-transform group-hover:scale-110 ${
                    item.color === "blue"
                      ? "text-blue-600 dark:text-blue-400"
                      : item.color === "emerald"
                        ? "text-emerald-600 dark:text-emerald-400"
                        : "text-violet-600 dark:text-violet-400"
                  }`}
                />
              </div>
              <h4 class="text-lg font-semibold text-zinc-900 dark:text-white mb-2">
                {item.title}
              </h4>
              <p class="text-sm text-zinc-500 dark:text-zinc-400 leading-relaxed">
                {item.description}
              </p>
            </div>
          </div>
        ))
      }

      <!-- Interests Card -->
      <div class="col-span-12 md:col-span-6">
        <div
          class="h-full bg-zinc-50 dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-3xl p-6"
        >
          <h4
            class="text-sm font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider mb-4"
          >
            {lang === "es" ? "Intereses" : "Interests"}
          </h4>
          <div class="flex flex-wrap gap-3">
            {
              interests.map((interest) => (
                <div class="flex items-center gap-2 px-4 py-2 bg-zinc-200/50 dark:bg-zinc-800 rounded-full">
                  <interest.icon className="w-4 h-4 text-zinc-600 dark:text-zinc-400" />
                  <span class="text-sm text-zinc-700 dark:text-zinc-300">
                    {interest.label}
                  </span>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
