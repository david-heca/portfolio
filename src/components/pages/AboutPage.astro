---
import { Image } from "astro:assets";
import { useTranslations } from "../../i18n/utils";
import {
  PiMapPin,
  PiBriefcase,
  PiGraduationCap,
  PiTranslate,
  PiSparkle,
  PiCode,
  PiLightbulb,
  PiHeartDuotone,
} from "react-icons/pi";

export interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const quickFacts = [
  {
    icon: PiMapPin,
    label: lang === "es" ? "Ciudad de México, México" : "Mexico City, Mexico",
    color: "blue",
  },
  {
    icon: PiBriefcase,
    label: lang === "es" ? "3+ años exp." : "3+ years exp.",
    color: "emerald",
  },
  {
    icon: PiGraduationCap,
    label:
      lang === "es"
        ? "Ing. Tecnologías de la Información"
        : "Information Technologies Engineering",
    color: "violet",
  },
  {
    icon: PiTranslate,
    label: "ES / EN",
    color: "amber",
  },
];

const expertise = [
  {
    icon: PiSparkle,
    title:
      lang === "es" ? "Inteligencia Artificial" : "Artificial Intelligence",
    description:
      lang === "es"
        ? "Explorando cómo la IA puede resolver problemas reales y crear valor tangible."
        : "Exploring how AI can solve real problems and create tangible value.",
    color: "blue",
  },
  {
    icon: PiCode,
    title: lang === "es" ? "Desarrollo Full-Stack" : "Full-Stack Development",
    description:
      lang === "es"
        ? "Construyendo aplicaciones con C#, Python, React y bases de datos modernas."
        : "Building applications with C#, Python, React and modern databases.",
    color: "emerald",
  },
  {
    icon: PiLightbulb,
    title: lang === "es" ? "Aprendizaje Continuo" : "Continuous Learning",
    description:
      lang === "es"
        ? "Siempre probando nuevas tecnologías y compartiendo conocimientos."
        : "Always testing new technologies and sharing knowledge.",
    color: "violet",
  },
];
---

<section>
  <!-- Header -->
  <div class="animate-slide-up text-center mb-12">
    <h1
      class="text-4xl md:text-5xl font-bold text-zinc-900 dark:text-white mb-4"
    >
      {t("about.title")}
    </h1>
    <p class="text-xl text-zinc-500 dark:text-zinc-400">
      {t("about.subtitle")}
    </p>
  </div>

  <!-- Bento Grid -->
  <div class="grid grid-cols-12 gap-4 md:gap-6">
    <!-- Profile Photo Card - Large -->
    <div class="col-span-12 md:col-span-5 lg:col-span-4">
      <div
        class="h-full bg-gray-50 dark:bg-gray-900 border border-zinc-200 dark:border-zinc-800 rounded-3xl p-4 overflow-hidden"
      >
        <div class="relative w-full h-full">
          <Image
            src="/assets/profile-photo.webp"
            alt="David Herrera"
            width={400}
            height={500}
            class="w-full h-full object-cover rounded-2xl transition-opacity duration-500"
            loading="eager"
            format="webp"
            quality={85}
          />
          <!-- Gradient overlay -->
          <div
            class="absolute inset-0 rounded-2xl bg-linear-to-t from-black/80 via-black/20 to-transparent"
          >
          </div>
          <!-- Name overlay -->
          <div class="absolute bottom-4 left-4 right-4">
            <h2 class="text-2xl font-bold text-white mb-1">David Herrera</h2>
            <p class="text-zinc-300 text-sm">
              {
                lang === "es"
                  ? "Desarrollador de Software"
                  : "Software Developer"
              }
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Bio Card -->
    <div class="col-span-12 md:col-span-7 lg:col-span-8">
      <div
        class="h-full bg-gray-50 dark:bg-gray-900 border border-zinc-200 dark:border-zinc-800 rounded-3xl p-6 md:p-8"
      >
        <div class="flex items-center gap-3 mb-4">
          <div
            class="w-10 h-10 rounded-2xl bg-gray-200/50 dark:bg-gray-800 flex items-center justify-center"
          >
            <PiHeartDuotone
              className="w-5 h-5 text-zinc-600 dark:text-zinc-400"
            />
          </div>
          <h3 class="text-lg font-semibold text-zinc-900 dark:text-white">
            {lang === "es" ? "Sobre Mí" : "About Me"}
          </h3>
        </div>

        <div class="space-y-4">
          {
            lang === "es" ? (
              <>
                <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                  Soy un profesional en Ingeniería de Software y Datos con un
                  sólido historial en el diseño, construcción y escalado de
                  soluciones impulsadas por datos e IA que generan valor
                  empresarial real.
                </p>
                <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                  A lo largo de mi carrera, he trabajado en la intersección de
                  la ingeniería de software, la ciencia de datos y la
                  automatización—liderando iniciativas que transforman desafíos
                  complejos en sistemas robustos y escalables. Mi experiencia
                  abarca desarrollo backend y frontend, ingeniería de datos e
                  inteligencia artificial aplicada, con un enfoque consistente
                  en arquitectura limpia, eficiencia y mantenibilidad a largo
                  plazo.
                </p>
                <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                  Más allá de la ejecución, contribuyo activamente al
                  intercambio de conocimientos y al desarrollo de talento. He
                  impartido conferencias y charlas académicas en universidades
                  sobre Inteligencia Artificial y Ciencia de Datos, ayudando a
                  cerrar la brecha entre la teoría y la aplicación en el mundo
                  real.
                </p>
              </>
            ) : (
              <>
                <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                  I am a Software and Data Engineering professional with a
                  strong track record in designing, building, and scaling
                  data-driven and AI-powered solutions that generate real
                  business value.
                </p>
                <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                  Throughout my career, I have worked at the intersection of
                  software engineering, data science, and automation—leading
                  initiatives that transform complex challenges into robust,
                  scalable systems. My expertise spans backend and frontend
                  development, data engineering, and applied artificial
                  intelligence, with a consistent focus on clean architecture,
                  efficiency, and long-term maintainability.
                </p>
                <p class="text-zinc-600 dark:text-zinc-400 leading-relaxed">
                  Beyond execution, I actively contribute to knowledge sharing
                  and talent development. I have delivered conferences and
                  academic talks at universities on Artificial Intelligence and
                  Data Science, helping bridge the gap between theory and
                  real-world application.
                </p>
              </>
            )
          }
        </div>
      </div>
    </div>

    <!-- Quick Facts - Row of 4 -->
    {
      quickFacts.map((fact) => (
        <div class="col-span-6 sm:col-span-3">
          <div class="h-full bg-gray-50 dark:bg-gray-900 border border-zinc-200 dark:border-zinc-800 rounded-3xl p-5 transition-all duration-300 hover:border-zinc-300 dark:hover:border-zinc-700">
            <div
              class={`w-10 h-10 rounded-xl mb-3 flex items-center justify-center ${
                fact.color === "blue"
                  ? "bg-blue-500/10 dark:bg-blue-500/20"
                  : fact.color === "emerald"
                    ? "bg-emerald-500/10 dark:bg-emerald-500/20"
                    : fact.color === "violet"
                      ? "bg-violet-500/10 dark:bg-violet-500/20"
                      : "bg-amber-500/10 dark:bg-amber-500/20"
              }`}
            >
              <fact.icon
                className={`w-5 h-5 ${
                  fact.color === "blue"
                    ? "text-blue-600 dark:text-blue-400"
                    : fact.color === "emerald"
                      ? "text-emerald-600 dark:text-emerald-400"
                      : fact.color === "violet"
                        ? "text-violet-600 dark:text-violet-400"
                        : "text-amber-600 dark:text-amber-400"
                }`}
              />
            </div>
            <p class="text-sm font-medium text-zinc-900 dark:text-white">
              {fact.label}
            </p>
          </div>
        </div>
      ))
    }

    <!-- Expertise Cards -->
    {
      expertise.map((item, index) => (
        <div
          class={`col-span-12 ${index === 0 ? "md:col-span-6 lg:col-span-4" : index === 1 ? "md:col-span-6 lg:col-span-4" : "md:col-span-12 lg:col-span-4"}`}
        >
          <div class="h-full bg-gray-50 dark:bg-gray-900 border border-zinc-200 dark:border-zinc-800 rounded-3xl p-6 transition-all duration-300 hover:border-zinc-300 dark:hover:border-zinc-700 hover:shadow-lg group">
            <div
              class={`w-12 h-12 rounded-2xl mb-4 flex items-center justify-center ${
                item.color === "blue"
                  ? "bg-blue-500/10 dark:bg-blue-500/20"
                  : item.color === "emerald"
                    ? "bg-emerald-500/10 dark:bg-emerald-500/20"
                    : "bg-violet-500/10 dark:bg-violet-500/20"
              }`}
            >
              <item.icon
                className={`w-6 h-6 transition-transform group-hover:scale-110 ${
                  item.color === "blue"
                    ? "text-blue-600 dark:text-blue-400"
                    : item.color === "emerald"
                      ? "text-emerald-600 dark:text-emerald-400"
                      : "text-violet-600 dark:text-violet-400"
                }`}
              />
            </div>
            <h4 class="text-lg font-semibold text-zinc-900 dark:text-white mb-2">
              {item.title}
            </h4>
            <p class="text-sm text-zinc-500 dark:text-zinc-400 leading-relaxed">
              {item.description}
            </p>
          </div>
        </div>
      ))
    }
  </div>
</section>
