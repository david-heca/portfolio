---
const experiences = [
  {
    id: 1,
    company: "Baacc Systems",
    position: "Fullstack & Data Engineer",
    period: "2023 Sep - Actualidad",
    location: "Estado de México, México",
    type: "Tiempo completo",
    description: "Desarrollo de aplicaciones web, móviles y sistemas de backend (microservicios) para clientes en sectores como automotríz, e-commerce y salud.",
    achievements: [
      "Implementé un sistema de control de inventario con tecnología RFID lo que mejoró el control de stock",
      "Desarrollé una plataforma de IA para empresas que permite interactuar con datos mediante lenguaje natural",
      "Optimicé el rendimiento de aplicaciones web, desarrolladas en WebAssembly",
      "Lideré equipos pequeños en proyectos de desarrollo ágil, mejorando la entrega de productos",
    ],
    technologies: ["React", "Python", "Java Script", "Tailwind CSS", "SQL Server", "Android", "FastAPI", "Docker", "Azure OpenAI", "WebAssembly"],
    logo: "/assets/company/baacc.webp"
  },
  {
    id: 2,
    company: "DEC Marketing",
    position: "Web Developer Junior",
    period: "2022 Mar - 2023 Sep",
    location: "Ciudad de México, México",
    type: "Contrato de prácticas",
    description: "Desarrollo y administración de sitios web y aplicaciones para clientes diversos, incluyendo temas de SEO y marketing digital.",
    achievements: [
      "Desarrollé más de 15 proyectos web exitosos con tecnologías como WordPress, OpenCart y Joomla",
      "Administre correos electrónicos y dominios para clientes",
      "Implementé estrategias de SEO que mejoraron la visibilidad en línea de los clientes con Google Ads y Google Analytics",
      "Mitigue ataques de denegación de servicio (DDoS) en sitios web de clientes con Cloudflare",
    ],
    technologies: ["HTML", "CSS", "JavaScript", "WordPress", "Figma", "OpenCart", "Joomla", "Google Ads", "Google Analytics"],
    logo: "/assets/company/dec.webp"
  },
];
---

<section id="experience" class="py-24 relative">
  <div class="max-w-6xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl font-bold mb-8">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-violet-400 via-purple-500 to-indigo-500">
          Experiencia Profesional
        </span>
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Mi trayectoria profesional y los proyectos en los que he trabajado.
      </p>
    </div>

    <div class="max-w-6xl mx-auto">
      <div class="relative">
        <!-- Timeline line mejorado -->
        <div class="absolute left-4 md:left-1/2 top-0 w-px bg-gradient-to-b from-purple-500/50 via-cyan-500/50 to-purple-500/20 md:transform md:-translate-x-1/2" style="height: calc(100% - 2rem);"></div>
        
        <div class="space-y-8 md:space-y-12">
          {experiences.map((exp, index) => (
            <div class={`experience-item relative ${index % 2 === 0 ? 'md:flex md:flex-row' : 'md:flex md:flex-row-reverse'} md:items-start`}>
              <!-- Timeline dot mejorado -->
              <div class="absolute left-2.5 md:left-1/2 w-3 h-3 md:w-4 md:h-4 bg-gradient-to-r from-purple-500 to-cyan-500 rounded-full md:transform md:-translate-x-1/2 z-10 shadow-lg shadow-purple-500/30 top-6 md:top-8">
                <div class="absolute inset-0.5 md:inset-1 bg-slate-900 rounded-full"></div>
              </div>
              
              <!-- Content Card mejorado -->
              <div class={`ml-8 md:ml-0 ${index % 2 === 0 ? 'md:mr-8 md:pr-8' : 'md:ml-8 md:pl-8'} md:w-6/12 md:pr-0`}>
                <div class="glass-card p-5 md:p-6 rounded-2xl group hover:scale-[1.02] transition-all duration-300">
                  <!-- Company Header -->
                  <div class="flex items-start gap-4 mb-4">
                    <!-- Logo -->
                    <div class="relative w-14 h-14 flex-shrink-0">
                      <div class="absolute inset-0 bg-gradient-to-br from-purple-500/20 to-cyan-500/20 rounded-xl border border-white/10 group-hover:scale-110 transition-transform"></div>
                      <div class="relative w-full h-full p-2 flex items-center justify-center">
                        {exp.logo ? (
                          <img 
                            src={exp.logo} 
                            alt={`${exp.company} logo`}
                            class="w-full h-full object-contain rounded-lg filter brightness-110"
                            loading="lazy"
                          />
                        ) : (
                          <!-- Fallback con inicial de la empresa -->
                          <div class="w-full h-full bg-gradient-to-br from-purple-400/40 to-cyan-400/40 rounded-lg flex items-center justify-center">
                            <span class="text-white font-bold text-lg">
                              {exp.company.charAt(0)}
                            </span>
                          </div>
                        )}
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <h3 class="text-lg md:text-xl font-bold text-white group-hover:text-purple-300 transition-colors mb-1">
                        {exp.position}
                      </h3>
                      <p class="text-purple-300 font-semibold mb-2">{exp.company}</p>
                      
                      <!-- Info badges mejorados -->
                      <div class="flex flex-wrap gap-2 mb-3">
                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-800/60 border border-gray-700/50 rounded-lg text-xs text-gray-300">
                          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                          {exp.period}
                        </span>
                        <span class="inline-flex items-center gap-1 px-2 py-1 bg-cyan-500/20 border border-cyan-400/30 rounded-lg text-xs text-cyan-300">
                          {exp.type}
                        </span>
                      </div>
                      
                      <div class="flex items-center gap-1 text-xs text-gray-400">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        {exp.location}
                      </div>
                    </div>
                  </div>

                  <!-- Description -->
                  <p class="text-gray-300 mb-4 leading-relaxed text-sm md:text-base">
                    {exp.description}
                  </p>

                  <!-- Achievements -->
                  <div class="mb-4">
                    <h4 class="text-sm font-semibold text-white mb-3 flex items-center gap-2">
                      <div class="w-1 h-4 bg-gradient-to-b from-purple-400 to-cyan-400 rounded-full"></div>
                      Logros principales
                    </h4>
                    <ul class="space-y-2">
                      {exp.achievements.map((achievement) => (
                        <li class="flex items-start gap-3 text-sm text-gray-300">
                          <div class="w-1.5 h-1.5 bg-purple-400 rounded-full mt-2 flex-shrink-0"></div>
                          <span class="leading-relaxed">{achievement}</span>
                        </li>
                      ))}
                    </ul>
                  </div>

                  <!-- Technologies -->
                  <div>
                    <h4 class="text-sm font-semibold text-white mb-3 flex items-center gap-2">
                      <div class="w-1 h-4 bg-gradient-to-b from-cyan-400 to-purple-400 rounded-full"></div>
                      Stack tecnológico
                    </h4>
                    <div class="flex flex-wrap gap-2">
                      {exp.technologies.map((tech) => (
                        <span class="px-3 py-1.5 bg-white/5 border border-white/10 text-gray-300 rounded-lg text-xs hover:bg-white/10 hover:border-purple-400/30 hover:text-purple-300 transition-all duration-200 cursor-default">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style is:global>
  @import '../../styles/components/experience.css';
</style>