---
const experiences = [
  {
    id: 1,
    company: "Baacc Systems",
    position: "Fullstack & Data Engineer",
    period: "2023 Sep - Actualidad",
    location: "Estado de México, México",
    type: "Tiempo completo",
    description: "Desarrollo de aplicaciones web modernas utilizando React, TypeScript y Next.js. Liderazgo de equipo frontend y mentoring a developers junior.",
    achievements: [
      "Mejoré el rendimiento de la aplicación principal en un 40%",
      "Implementé sistema de design system que redujo tiempo de desarrollo en 30%",
      "Lideré la migración de JavaScript a TypeScript"
    ],
    technologies: ["React", "TypeScript", "Next.js", "Tailwind CSS", "GraphQL"],
    logo: "/assets/company-logos/tech-company.png"
  },
  {
    id: 2,
    company: "DEC Marketing",
    position: "Web Developer Junior",
    period: "2022 Mar - 2023 Sep",
    location: "Ciudad de México, México",
    type: "Contrato de prácticas",
    description: "Desarrollo de sitios web y aplicaciones para clientes diversos, desde startups hasta empresas Fortune 500.",
    achievements: [
      "Desarrollé más de 15 proyectos web exitosos",
      "Implementé metodologías ágiles que mejoraron la productividad en 25%",
      "Especialización en animaciones web y micro-interacciones"
    ],
    technologies: ["HTML", "CSS", "JavaScript", "WordPress", "Figma", "OpenCart", "Joompla", "Google Ads", "Google Analytics"],
    logo: "/assets/company-logos/digital-agency.png"
  },
];
---

<section id="experience" class="py-24 relative">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-6xl font-bold mb-8">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-cyan-400">
          Experiencia Profesional
        </span>
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Mi trayectoria construyendo experiencias digitales excepcionales
      </p>
      <div class="w-24 h-1 bg-gradient-to-r from-purple-400 to-cyan-400 mx-auto rounded-full mt-8"></div>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="relative">
        <!-- Timeline line - Mejorado para móvil -->
        <div class="absolute left-6 md:left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-purple-500/50 via-cyan-500/50 to-transparent md:transform md:-translate-x-1/2"></div>
        
        <div class="space-y-8 md:space-y-12">
          {experiences.map((exp, index) => (
            <div class={`experience-item relative flex flex-col ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'} md:items-center`}>
              <!-- Timeline dot - Ajustado para móvil -->
              <div class="absolute left-5 md:left-1/2 w-3 h-3 md:w-4 md:h-4 bg-gradient-to-r from-purple-500 to-cyan-500 rounded-full md:transform md:-translate-x-1/2 z-10 shadow-lg shadow-purple-500/50 top-6">
                <div class="absolute inset-0.5 md:inset-1 bg-slate-900 rounded-full"></div>
              </div>
              
              <!-- Content Card - Mejorado spacing móvil -->
              <div class={`experience-card ml-12 md:ml-0 ${index % 2 === 0 ? 'md:mr-8' : 'md:ml-8'} md:w-5/12`}>
                <div class="glass-card p-4 md:p-6 rounded-2xl group hover:scale-105 transition-all duration-300">
                  <!-- Company Header -->
                  <div class="flex items-start gap-3 md:gap-4 mb-4">
                    <div class="w-10 h-10 md:w-12 md:h-12 bg-gradient-to-r from-purple-500/20 to-cyan-500/20 rounded-xl flex items-center justify-center border border-white/10 flex-shrink-0">
                      <div class="w-6 h-6 md:w-8 md:h-8 bg-white/10 rounded-lg"></div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <h3 class="text-lg md:text-xl font-semibold text-white group-hover:text-purple-300 transition-colors">
                        {exp.position}
                      </h3>
                      <p class="text-purple-300 font-medium">{exp.company}</p>
                      <div class="flex flex-col sm:flex-row sm:flex-wrap gap-1 sm:gap-2 mt-2 text-sm text-gray-400">
                        <span class="flex items-center gap-1">
                          <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                          {exp.period}
                        </span>
                        <span class="flex items-center gap-1">
                          <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                          </svg>
                          {exp.location}
                        </span>
                        <span class="inline-flex px-2 py-1 bg-cyan-500/20 text-cyan-300 rounded-full text-xs w-fit">
                          {exp.type}
                        </span>
                      </div>
                    </div>
                  </div>

                  <!-- Description -->
                  <p class="text-gray-300 mb-4 leading-relaxed text-sm md:text-base">
                    {exp.description}
                  </p>

                  <!-- Achievements -->
                  <div class="mb-4">
                    <h4 class="text-sm font-semibold text-gray-200 mb-2">Logros principales:</h4>
                    <ul class="space-y-2">
                      {exp.achievements.map((achievement) => (
                        <li class="flex items-start gap-2 text-sm text-gray-400">
                          <svg class="w-3 h-3 md:w-4 md:h-4 text-purple-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          <span class="leading-relaxed">{achievement}</span>
                        </li>
                      ))}
                    </ul>
                  </div>

                  <!-- Technologies -->
                  <div>
                    <h4 class="text-sm font-semibold text-gray-200 mb-2">Tecnologías:</h4>
                    <div class="flex flex-wrap gap-1.5 md:gap-2">
                      {exp.technologies.map((tech) => (
                        <span class="px-2 md:px-3 py-1 bg-gray-800/50 border border-gray-700/50 text-gray-300 rounded-full text-xs hover:bg-gray-700/50 transition-colors">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .glass-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .experience-card:hover .glass-card {
    border-color: rgba(147, 51, 234, 0.3);
    box-shadow: 0 20px 40px rgba(147, 51, 234, 0.1);
  }
  
  .experience-item {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }
  
  .experience-item:nth-child(1) { animation-delay: 0.1s; }
  .experience-item:nth-child(2) { animation-delay: 0.2s; }
  .experience-item:nth-child(3) { animation-delay: 0.3s; }
  
  /* Mejoras específicas para móvil */
  @media (max-width: 768px) {
    .experience-item {
      margin-bottom: 1rem;
    }
    
    .experience-card .glass-card {
      margin-right: 1rem; /* Espacio del borde derecho en móvil */
    }
    
    /* Ajustar el timeline line para que no se vea cortado */
    .experience-item:last-child::after {
      content: '';
      position: absolute;
      left: 1.5rem;
      bottom: -2rem;
      width: 2px;
      height: 2rem;
      background: linear-gradient(to bottom, rgba(139, 92, 246, 0.5), transparent);
    }
  }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>