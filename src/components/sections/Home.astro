---
import { Image } from "astro:assets";
import { useTranslations } from "@i18n/utils";
import {
  PiCode,
  PiArrowRightBold,
  PiBriefcase,
  PiHeartDuotone,
  PiCoffeeDuotone,
  PiGameControllerDuotone,
  PiMusicNoteDuotone,
  PiRocketDuotone,
  PiFolderOpen,
  PiUserCircle,
} from "react-icons/pi";

export interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const interests = [
  { icon: PiCoffeeDuotone, label: t("home.interests.coffee") },
  { icon: PiGameControllerDuotone, label: t("home.interests.gaming") },
  { icon: PiMusicNoteDuotone, label: t("home.interests.music") },
  { icon: PiRocketDuotone, label: t("home.interests.tech") },
];
---

<section>
  <div class="space-y-4 md:space-y-6">
    <!-- Hero Section with Photo -->
    <div
      class="grid grid-cols-1 md:grid-cols-12 gap-4 md:gap-6 auto-rows-[minmax(200px,auto)]"
    >
      <!-- Hero Text -->
      <div
        class="md:col-span-8 rounded-3xl bg-gray-50 dark:bg-gray-900 border border-zinc-300 dark:border-zinc-700 p-6 md:p-10 flex flex-col justify-center relative overflow-hidden group"
      >
        <div
          class="absolute top-0 right-0 p-4 opacity-5 group-hover:opacity-10 transition-opacity"
        >
          <PiCode className="w-32 md:w-48 h-32 md:h-48" />
        </div>

        <div class="relative z-10">
          <div
            class="inline-flex items-center align-middle gap-2 px-3 py-1.5 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 text-xs font-medium mb-6"
          >
            <span class="relative flex h-2 w-2">
              <span
                class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"
              ></span>
              <span
                class="relative inline-flex rounded-full h-2 w-2 bg-blue-500"
              ></span>
            </span>
            {t("home.available")}
          </div>

          <h1
            class="text-3xl md:text-4xl lg:text-6xl font-bold text-zinc-900 dark:text-white mb-4 tracking-tight"
          >
            {t("hero.greeting")}
            <span class="text-blue-600 dark:text-blue-400">David Herrera</span>
          </h1>
          <p
            class="text-lg md:text-2xl text-zinc-600 dark:text-zinc-400 leading-relaxed mb-2"
          >
            {t("hero.title")}
          </p>
          <p class="text-base md:text-lg text-zinc-500 dark:text-zinc-500">
            {t("hero.description")}
          </p>
        </div>
      </div>

      <!-- Photo -->
      <div
        class="md:col-span-4 rounded-3xl bg-gray-50 dark:bg-gray-900 border border-zinc-300 dark:border-zinc-700 p-4 relative overflow-hidden"
      >
        <div class="relative w-full h-full min-h-70 md:min-h-0">
          <Image
            src="/assets/profile-photo.webp"
            alt="David Herrera"
            width={400}
            height={500}
            class="w-full h-full object-cover rounded-2xl transition-opacity duration-500"
            loading="eager"
            format="webp"
            quality={85}
          />
          <!-- Gradient overlay -->
          <div
            class="absolute inset-0 rounded-2xl bg-linear-to-t from-black/60 via-black/10 to-transparent"
          >
          </div>
        </div>
      </div>
    </div>

    <!-- About Me - Extended Bio -->
    <div
      class="rounded-3xl bg-gray-50 dark:bg-gray-900 border border-zinc-300 dark:border-zinc-700 p-6 md:p-10"
    >
      <div class="flex items-center gap-3 mb-6">
        <div
          class="w-12 h-12 rounded-2xl bg-gray-200/50 dark:bg-gray-800 flex items-center justify-center"
        >
          <PiHeartDuotone
            className="w-6 h-6 text-zinc-600 dark:text-zinc-400"
          />
        </div>
        <h2
          class="text-2xl md:text-3xl font-bold text-zinc-900 dark:text-white"
        >
          {t("home.aboutSection.title")}
        </h2>
      </div>

      <div class="space-y-4 max-w-4xl">
        <p
          class="text-base md:text-lg text-zinc-600 dark:text-zinc-400 leading-relaxed"
        >
          {t("home.aboutSection.bio.paragraph1")}
        </p>
        <p
          class="text-base md:text-lg text-zinc-600 dark:text-zinc-400 leading-relaxed"
        >
          {t("home.aboutSection.bio.paragraph2")}
        </p>
        <p
          class="text-base md:text-lg text-zinc-600 dark:text-zinc-400 leading-relaxed"
        >
          {t("home.aboutSection.bio.paragraph3")}
        </p>
      </div>
    </div>

    <!-- CTA Buttons - Navigation to other sections -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
      <a
        href={lang === "es" ? "/work" : "/en/work"}
        class="group rounded-3xl bg-gray-900 dark:bg-white border border-gray-900 dark:border-white p-6 md:p-8 hover:scale-[1.02] transition-all duration-300 hover:shadow-xl"
      >
        <div class="flex items-start justify-between mb-4">
          <div
            class="w-12 h-12 rounded-xl bg-white/10 dark:bg-gray-900/10 flex items-center justify-center group-hover:scale-110 transition-transform"
          >
            <PiBriefcase className="w-6 h-6 text-white dark:text-gray-900" />
          </div>
          <PiArrowRightBold
            className="w-5 h-5 text-white dark:text-gray-900 opacity-50 group-hover:opacity-100 group-hover:translate-x-1 transition-all"
          />
        </div>
        <h3
          class="text-xl md:text-2xl font-bold text-white dark:text-gray-900 mb-2"
        >
          {t("work.title")}
        </h3>
        <p class="text-sm text-gray-300 dark:text-gray-600">
          {t("work.subtitle")}
        </p>
      </a>

      <a
        href={lang === "es" ? "/projects" : "/en/projects"}
        class="group rounded-3xl bg-blue-600 dark:bg-blue-500 border border-blue-600 dark:border-blue-500 p-6 md:p-8 hover:scale-[1.02] transition-all duration-300 hover:shadow-xl"
      >
        <div class="flex items-start justify-between mb-4">
          <div
            class="w-12 h-12 rounded-xl bg-white/10 dark:bg-white/20 flex items-center justify-center group-hover:scale-110 transition-transform"
          >
            <PiFolderOpen className="w-6 h-6 text-white" />
          </div>
          <PiArrowRightBold
            className="w-5 h-5 text-white opacity-50 group-hover:opacity-100 group-hover:translate-x-1 transition-all"
          />
        </div>
        <h3 class="text-xl md:text-2xl font-bold text-white mb-2">
          {t("projects.title")}
        </h3>
        <p class="text-sm text-blue-100">
          {t("projects.subtitle")}
        </p>
      </a>

      <a
        href={lang === "es" ? "/contact" : "/en/contact"}
        class="group rounded-3xl bg-gray-50 dark:bg-gray-900 border border-zinc-300 dark:border-zinc-700 p-6 md:p-8 hover:scale-[1.02] hover:border-zinc-400 dark:hover:border-zinc-600 transition-all duration-300"
      >
        <div class="flex items-start justify-between mb-4">
          <div
            class="w-12 h-12 rounded-xl bg-blue-500/20 dark:bg-blue-500/20 flex items-center justify-center group-hover:scale-110 transition-transform"
          >
            <PiUserCircle
              className="w-6 h-6 text-blue-600 dark:text-blue-400"
            />
          </div>
          <PiArrowRightBold
            className="w-5 h-5 text-zinc-400 dark:text-zinc-600 group-hover:text-blue-600 dark:group-hover:text-blue-400 group-hover:translate-x-1 transition-all"
          />
        </div>
        <h3
          class="text-xl md:text-2xl font-bold text-zinc-900 dark:text-white mb-2"
        >
          {t("contact.title")}
        </h3>
        <p class="text-sm text-zinc-600 dark:text-zinc-400">
          {t("contact.subtitle")}
        </p>
      </a>
    </div>

    <!-- Interests -->
    <div
      class="rounded-3xl bg-gray-50 dark:bg-gray-900 border border-zinc-300 dark:border-zinc-700 p-6 md:p-8"
    >
      <h3
        class="text-lg md:text-xl font-semibold text-zinc-900 dark:text-white mb-4"
      >
        {t("home.interestsTitle")}
      </h3>
      <div class="flex flex-wrap gap-3">
        {
          interests.map((interest) => (
            <div class="flex items-center gap-2 px-4 py-2.5 bg-white dark:bg-gray-800 border border-zinc-200 dark:border-zinc-700 rounded-full hover:border-zinc-300 dark:hover:border-zinc-600 transition-colors">
              <interest.icon className="w-5 h-5 text-zinc-600 dark:text-zinc-400" />
              <span class="text-sm md:text-base font-medium text-zinc-700 dark:text-zinc-300">
                {interest.label}
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
