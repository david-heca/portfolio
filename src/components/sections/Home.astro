---
import { Image } from "astro:assets";
import { useTranslations } from "@i18n/utils";
import {
  PiArrowRightBold,
  PiBriefcase,
  PiCoffeeDuotone,
  PiGameControllerDuotone,
  PiMusicNoteDuotone,
  PiRocketDuotone,
  PiFolderOpen,
  PiUserCircle,
} from "react-icons/pi";

export interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const interests = [
  { icon: PiCoffeeDuotone, label: t("home.interests.coffee") },
  { icon: PiGameControllerDuotone, label: t("home.interests.gaming") },
  { icon: PiMusicNoteDuotone, label: t("home.interests.music") },
  { icon: PiRocketDuotone, label: t("home.interests.tech") },
];
---

<section>
  <div class="space-y-8 md:space-y-12">
    <!-- Hero Section - Cinematic Full Width -->
    <div class="relative overflow-hidden">
      <div
        class="relative z-10 flex flex-col md:flex-row items-start md:items-center gap-8 md:gap-12 py-8 md:py-16"
      >
        <!-- Text Content -->
        <div class="flex-1 min-w-0">
          <!-- Greeting Label -->
          <p
            class="reveal reveal-delay-1 font-mono text-sm uppercase tracking-widest mb-4"
            style={`color: var(--color-text-tertiary);`}
          >
            {t("hero.greeting")}
          </p>

          <!-- Name -->
          <h1
            class="reveal reveal-delay-2 text-5xl md:text-7xl lg:text-8xl font-bold tracking-tight leading-[1.05] mb-6"
          >
            <span class="text-gradient">David Herrera</span>
          </h1>

          <!-- Role -->
          <p
            class="reveal reveal-delay-3 text-xl md:text-2xl leading-relaxed mb-3"
            style={`color: var(--color-text-secondary);`}
          >
            {t("hero.title")}
          </p>
          <p
            class="reveal reveal-delay-4 text-base md:text-lg"
            style={`color: var(--color-text-tertiary);`}
          >
            {t("hero.description")}
          </p>
        </div>

        <!-- Photo -->
        <div class="reveal reveal-delay-3">
          <div class="relative w-72 h-72">
            <Image
              src="/assets/profile-photo.webp"
              alt="David Herrera"
              width={256}
              height={256}
              class="w-full h-full object-cover rounded-3xl"
              loading="eager"
              format="webp"
              quality={85}
            />
          </div>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="divider"></div>

    <!-- About Me -->
    <div class="reveal">
      <span
        class="font-mono text-xs uppercase tracking-widest block mb-6"
        style={`color: var(--color-accent);`}
      >
        // {t("home.aboutSection.title")}
      </span>

      <div class="space-y-4 max-w-4xl">
        <p
          class="text-base md:text-lg leading-relaxed"
          style={`color: var(--color-text-secondary);`}
        >
          {t("home.aboutSection.bio.paragraph1")}
        </p>
        <p
          class="text-base md:text-lg leading-relaxed"
          style={`color: var(--color-text-secondary);`}
        >
          {t("home.aboutSection.bio.paragraph2")}
        </p>
        <p
          class="text-base md:text-lg leading-relaxed"
          style={`color: var(--color-text-secondary);`}
        >
          {t("home.aboutSection.bio.paragraph3")}
        </p>
      </div>
    </div>

    <!-- CTA Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-5">
      <a
        href={lang === "es" ? "/work" : "/en/work"}
        class="reveal reveal-delay-1 group rounded-2xl p-6 border-l-2 transition-all duration-300 hover:-translate-y-0.5"
        style={`background-color: var(--color-bg-secondary); border: 1px solid var(--color-border-default);`}
        onmouseenter="this.style.borderColor='var(--color-border-hover)'; this.style.boxShadow='0 0 30px -10px var(--color-accent-glow)'"
        onmouseleave="this.style.borderColor='var(--color-border-default)'; this.style.boxShadow='none'"
      >
        <div class="flex items-start justify-between mb-3">
          <PiBriefcase className="w-5 h-5 text-zinc-500 dark:text-zinc-400" />
          <PiArrowRightBold
            className="w-4 h-4 opacity-0 group-hover:opacity-100 group-hover:translate-x-1 transition-all text-indigo-500 dark:text-indigo-400"
          />
        </div>
        <h3
          class="text-lg font-semibold mb-1"
          style={`color: var(--color-text-primary);`}
        >
          {t("work.title")}
        </h3>
        <p class="text-sm" style={`color: var(--color-text-tertiary);`}>
          {t("work.subtitle")}
        </p>
      </a>

      <a
        href={lang === "es" ? "/projects" : "/en/projects"}
        class="reveal reveal-delay-2 group rounded-2xl p-6 border-l-2 transition-all duration-300 hover:-translate-y-0.5"
        style={`background-color: var(--color-bg-secondary); border: 1px solid var(--color-border-default);`}
        onmouseenter="this.style.borderColor='var(--color-border-hover)'; this.style.boxShadow='0 0 30px -10px var(--color-accent-glow)'"
        onmouseleave="this.style.borderColor='var(--color-border-default)'; this.style.boxShadow='none'"
      >
        <div class="flex items-start justify-between mb-3">
          <PiFolderOpen
            className="w-5 h-5 text-indigo-500 dark:text-indigo-400"
          />
          <PiArrowRightBold
            className="w-4 h-4 opacity-0 group-hover:opacity-100 group-hover:translate-x-1 transition-all text-indigo-500 dark:text-indigo-400"
          />
        </div>
        <h3
          class="text-lg font-semibold mb-1"
          style={`color: var(--color-text-primary);`}
        >
          {t("projects.title")}
        </h3>
        <p class="text-sm" style={`color: var(--color-text-tertiary);`}>
          {t("projects.subtitle")}
        </p>
      </a>

      <a
        href={lang === "es" ? "/contact" : "/en/contact"}
        class="reveal reveal-delay-3 group rounded-2xl p-6 border-l-2 transition-all duration-300 hover:-translate-y-0.5"
        style={`background-color: var(--color-bg-secondary); border: 1px solid var(--color-border-default);`}
        onmouseenter="this.style.borderColor='var(--color-border-hover)'; this.style.boxShadow='0 0 30px -10px var(--color-accent-glow)'"
        onmouseleave="this.style.borderColor='var(--color-border-default)'; this.style.boxShadow='none'"
      >
        <div class="flex items-start justify-between mb-3">
          <PiUserCircle className="w-5 h-5 text-cyan-500 dark:text-cyan-400" />
          <PiArrowRightBold
            className="w-4 h-4 opacity-0 group-hover:opacity-100 group-hover:translate-x-1 transition-all text-indigo-500 dark:text-indigo-400"
          />
        </div>
        <h3
          class="text-lg font-semibold mb-1"
          style={`color: var(--color-text-primary);`}
        >
          {t("contact.title")}
        </h3>
        <p class="text-sm" style={`color: var(--color-text-tertiary);`}>
          {t("contact.subtitle")}
        </p>
      </a>
    </div>

    <!-- Interests -->
    <div class="reveal">
      <h3
        class="font-mono text-xs uppercase tracking-widest mb-4"
        style={`color: var(--color-text-tertiary);`}
      >
        {t("home.interestsTitle")}
      </h3>
      <div class="flex flex-wrap gap-3">
        {
          interests.map((interest) => (
            <div
              class="flex items-center gap-2 px-3 py-1.5 rounded-md font-mono text-xs transition-colors"
              style={`background-color: var(--color-bg-tertiary); color: var(--color-text-secondary);`}
            >
              <interest.icon className="w-4 h-4" />
              <span>{interest.label}</span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
