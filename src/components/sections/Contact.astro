                </div>
                <div class="flex-1">
                  <p class="text-gray-500 text-sm mb-1">Teléfono</p>
                  <a href={`tel:${contactInfo.phone}`} class="text-lg md:text-xl font-medium text-white hover:text-cyan-300 transition-colors">
                    {contactInfo.phone}
                  </a>
                </div>
              </div>
            </div>

            <!-- Ubicación -->
            <div class="contact-item group">
              <div class="contact-item-content flex items-center gap-4 md:gap-6 p-4 md:p-6 rounded-2xl transition-all duration-300">
                <div class="contact-item-icon w-12 h-12 md:w-14 md:h-14 bg-indigo-500/20 rounded-2xl flex items-center justify-center group-hover:bg-indigo-500/30 transition-colors flex-shrink-0">
