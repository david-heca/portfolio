---
import { useTranslations } from "@i18n/utils";
import {
  PiEnvelope,
  PiPhone,
  PiMapPin,
  PiGithubLogo,
  PiLinkedinLogo,
  PiXLogo,
  PiInstagramLogo,
  PiClock,
  PiArrowUpRight,
  PiDownloadSimple,
} from "react-icons/pi";
import CvDownloadButton from "@ui/CvDownloadButton";

export interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const contactInfo = {
  email: "hello@davidherrera.dev",
  phone: "+52 442 837 2849",
  location: t("contact.info.location"),
  availability: t("contact.info.availability"),
  timezone: t("contact.info.timezone"),
};

const socialLinks = [
  { name: "GitHub", url: "https://github.com/david-heca", icon: PiGithubLogo, username: "@david-heca" },
  { name: "LinkedIn", url: "https://www.linkedin.com/in/david-heca/", icon: PiLinkedinLogo, username: "/in/david-heca" },
  { name: "Twitter", url: "https://x.com/david_heca_", icon: PiXLogo, username: "@david_heca_" },
  { name: "Instagram", url: "https://www.instagram.com/david_heca/", icon: PiInstagramLogo, username: "@david_heca" },
];
---

<section>
  <!-- Header -->
  <div class="reveal mb-16">
    <span class="font-mono text-xs uppercase tracking-widest block mb-3" style={`color: var(--color-accent);`}>
      // 05. {t("nav.contact")}
    </span>
    <h1 class="text-3xl md:text-5xl font-bold tracking-tight mb-3" style={`color: var(--color-text-primary);`}>
      {t("contact.title")}
    </h1>
    <p class="text-lg" style={`color: var(--color-text-secondary);`}>
      {t("contact.subtitle")}
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-12 gap-5 mb-12">
    <!-- Main Email CTA -->
    <div
      class="reveal md:col-span-8 rounded-2xl p-8 md:p-10 relative overflow-hidden"
      style="background: linear-gradient(135deg, var(--color-accent), #7C3AED);"
    >
      <!-- Subtle pattern -->
      <div
        class="absolute inset-0 opacity-10 pointer-events-none"
        style="background-image: url('/assets/noise.svg'); background-repeat: repeat;"
      >
      </div>

      <div class="relative z-10">
        <div
          class="inline-flex items-center gap-2 px-3 py-1.5 bg-white/15 backdrop-blur-sm rounded-full text-white text-xs font-mono uppercase tracking-wider mb-6"
        >
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-400"></span>
          </span>
          {contactInfo.availability}
        </div>

        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 tracking-tight">
          {t("contact.cta.heading")}
        </h2>

        <p class="text-white/70 text-lg mb-8 max-w-xl">
          {t("contact.cta.description")}
        </p>

        <div class="flex flex-col sm:flex-row gap-3">
          <a
            href={`mailto:${contactInfo.email}`}
            class="inline-flex items-center justify-center gap-3 px-8 py-3.5 bg-white text-indigo-600 rounded-xl font-semibold hover:scale-105 transition-all duration-200 shadow-xl"
          >
            <PiEnvelope className="w-5 h-5" />
            {t("contact.cta.sendEmail")}
          </a>
          <a
            href={`tel:${contactInfo.phone}`}
            class="inline-flex items-center justify-center gap-3 px-8 py-3.5 bg-white/10 backdrop-blur-sm text-white border border-white/20 rounded-xl font-semibold hover:bg-white/20 transition-all duration-200"
          >
            <PiPhone className="w-5 h-5" />
            {contactInfo.phone}
          </a>
        </div>
      </div>
    </div>

    <!-- Location Card -->
    <div
      class="reveal md:col-span-4 rounded-2xl p-6 md:p-8"
      style={`background-color: var(--color-bg-secondary); border: 1px solid var(--color-border-default);`}
    >
      <PiMapPin className="w-6 h-6 mb-4 text-indigo-500 dark:text-indigo-400" />
      <h3 class="text-lg font-bold mb-2" style={`color: var(--color-text-primary);`}>
        {t("contact.location.title")}
      </h3>
      <p class="mb-4" style={`color: var(--color-text-secondary);`}>
        {contactInfo.location}
      </p>
      <div class="flex items-center gap-2 font-mono text-xs" style={`color: var(--color-text-tertiary);`}>
        <PiClock className="w-3.5 h-3.5" />
        {contactInfo.timezone}
      </div>
    </div>

    <!-- CV Downloads - Minimal -->
    <div
      class="reveal md:col-span-6 rounded-2xl p-6 flex items-center gap-4"
      style={`background-color: var(--color-bg-secondary); border: 1px solid var(--color-border-default);`}
    >
      <PiDownloadSimple className="w-5 h-5 shrink-0 text-indigo-500 dark:text-indigo-400" />
      <div class="flex-1">
        <h3 class="text-sm font-semibold" style={`color: var(--color-text-primary);`}>
          {t("contact.cv.spanish.title")}
        </h3>
        <p class="font-mono text-xs" style={`color: var(--color-text-tertiary);`}>PDF · Nov 2025</p>
      </div>
      <CvDownloadButton
        client:load
        href="/assets/documents/davidherrera-spanish.pdf"
        download="davidherrera-spanish.pdf"
        label={t("contact.cv.download")}
        className="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 bg-indigo-500/10 text-indigo-500 dark:bg-indigo-400/15 dark:text-indigo-400"
      />
    </div>

    <div
      class="reveal md:col-span-6 rounded-2xl p-6 flex items-center gap-4"
      style={`background-color: var(--color-bg-secondary); border: 1px solid var(--color-border-default);`}
    >
      <PiDownloadSimple className="w-5 h-5 shrink-0 text-indigo-500 dark:text-indigo-400" />
      <div class="flex-1">
        <h3 class="text-sm font-semibold" style={`color: var(--color-text-primary);`}>
          {t("contact.cv.english.title")}
        </h3>
        <p class="font-mono text-xs" style={`color: var(--color-text-tertiary);`}>PDF · Nov 2025</p>
      </div>
      <CvDownloadButton
        client:load
        href="/assets/documents/davidherrera-english.pdf"
        download="davidherrera-english.pdf"
        label={t("contact.cv.download")}
        className="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200 bg-indigo-500/10 text-indigo-500 dark:bg-indigo-400/15 dark:text-indigo-400"
      />
    </div>

    <!-- Social Links - Icon Row -->
    <div class="md:col-span-12">
      <div class="reveal flex flex-wrap gap-3">
        {
          socialLinks.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-center gap-3 px-5 py-3 rounded-xl transition-all duration-300"
              style={`background-color: var(--color-bg-secondary); border: 1px solid var(--color-border-default);`}
              onmouseenter="this.style.borderColor='var(--color-border-hover)'; this.style.boxShadow='0 0 20px -8px var(--color-accent-glow)'"
              onmouseleave="this.style.borderColor='var(--color-border-default)'; this.style.boxShadow='none'"
            >
              <social.icon className="w-5 h-5 text-zinc-500 dark:text-zinc-400" />
              <div class="min-w-0">
                <p class="text-sm font-semibold" style={`color: var(--color-text-primary);`}>{social.name}</p>
                <p class="font-mono text-xs truncate" style={`color: var(--color-text-tertiary);`}>{social.username}</p>
              </div>
              <PiArrowUpRight
                className="w-4 h-4 opacity-0 group-hover:opacity-100 group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-all"
                className="text-indigo-500 dark:text-indigo-400"
              />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
