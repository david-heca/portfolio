---
import { PiGithubLogoDuotone, PiLinkDuotone } from "react-icons/pi";

const projects = [
  {
    id: 1,
    title: "Portafolio",
    description: "Portafolio personal para mostrar mis proyectos y habilidades como desarrollador.",
    image: "/assets/projects/portfolio.webp",
    tech: ["Astro", "Tailwind", "JavaScript", "React", "Markdown"],
    github: "https://github.com/david-heca/portfolio",
    type: "personal"
  },
  {
    id: 2,
    title: "Connie",
    description: "Plataforma de IA para empresas, habla con tus datos por medio del procesamiento de lenguaje natural.",
    image: "/assets/projects/connie.webp",
    tech: ["React", "RAG", "SQL", "JWT", "FastAPI", "MCP", "Azure OpenAI"],
    demo: "https://connie.app",
    type: "work"
  },
  {
    id: 3,
    title: "HandHeld - Aplicación de RFID",
    description: "Aplicación para controlar el inventario de una empresa, utilizando tecnología RFID.",
    image: "/assets/projects/handheld.webp",
    tech: ["Java", "Android Studio", "Material", "SQL", "Firebase", "Sentry", "ODBC"],
    type: "work"
  },
  {
    id: 4,
    title: "Trazabilidad de Piezas Automotrices",
    description: "Aplicación de escritorio para la trazabilidad de piezas automotrices utilizando C# y DevExpress.",
    image: "/assets/projects/trace.webp",
    tech: ["C#", "DevExpress", "SQL", "WinForms", ".NET Framework"],
    type: "work",
  },
];
---

<section id="projects" class="py-24 relative">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl font-bold mb-8">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-indigo-400 via-purple-400 to-cyan-400">
          Proyectos Destacados
        </span>
      </h2>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto">
        Una selección de mis trabajos más recientes y significativos
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="project-card group" data-project-id={project.id}>
          <div class="relative overflow-hidden rounded-2xl">
            <!-- Indicador de tipo de proyecto -->
            <div class="absolute top-4 left-4 z-10">
              {project.type === 'work' ? (
                <div class="flex items-center gap-2 px-3 py-1.5 bg-blue-500/20 backdrop-blur-xl rounded-full border border-blue-400/30">
                  <span class="text-blue-300 text-xs font-medium">Trabajo</span>
                </div>
              ) : (
                <div class="flex items-center gap-2 px-3 py-1.5 bg-green-500/20 backdrop-blur-xl rounded-full border border-green-400/30">
                  <span class="text-green-300 text-xs font-medium">Personal</span>
                </div>
              )}
            </div>
            <img 
              src={project.image} 
              alt={project.title}
              loading="lazy"
              class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            
            {/* Botones de acción de los proyectos */}
            <div class="absolute bottom-4 left-4 right-4 transform translate-y-4 group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all duration-300 ease-out">
              <div class="flex gap-2 justify-center">
                {project.demo && (
                  <a 
                    href={project.demo} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-xl rounded-lg hover:bg-white/30 transition-colors duration-200"
                    title="Ver demo"
                  >
                    <PiLinkDuotone className="w-5 h-5" />
                    <span class="text-white text-sm font-medium">Demo</span>
                  </a>
                )}
                
                {project.github && (
                  <a 
                    href={project.github} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-xl rounded-lg hover:bg-white/30 transition-colors duration-200"
                    title="Ver código"
                  >
                    <PiGithubLogoDuotone className="w-5 h-5" />
                    <span class="text-white text-sm font-medium">Código</span>
                  </a>
                )}
              </div>
            </div>
          </div>
          
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2 group-hover:text-purple-400 transition-colors">
              {project.title}
            </h3>
            <p class="text-gray-400 mb-4 line-clamp-3">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2">
              {project.tech.map((tech) => (
                <span class="px-3 py-1 bg-gray-800 text-gray-300 rounded-full text-sm">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style is:global>
  @import '../../styles/components/projects.css';
</style>