---
import Avatar3D from '../Avatar3D.astro';
import profileImage from '/public/assets/dh.webp';
---

<section id="hero" class="min-h-screen flex items-center justify-center relative overflow-hidden">
  <!-- Background mejorado -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-purple-900/30 to-slate-900"></div>
  <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent"></div>
  
  <!-- Floating elements mejorados -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="floating-element absolute top-10 left-5 md:top-20 md:left-10 w-48 h-48 md:w-72 md:h-72 bg-purple-500/15 rounded-full blur-3xl animate-float"></div>
    <div class="floating-element absolute bottom-10 right-5 md:bottom-20 md:right-10 w-64 h-64 md:w-96 md:h-96 bg-cyan-500/15 rounded-full blur-3xl animate-float-delayed"></div>
    <div class="floating-element absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 md:w-48 md:h-48 bg-indigo-500/10 rounded-full blur-2xl animate-pulse"></div>
  </div>

  <div class="container mx-auto px-4 text-center relative z-10">
    <!-- Avatar con mejor responsive -->
    <div class="mb-6 md:mb-8">
      <Avatar3D src={profileImage} alt="David Herrera" size="w-28 h-28 md:w-36 md:h-36 lg:w-36 lg:h-36" />
    </div>
    
    <div class="space-y-4 md:space-y-8">
      <!-- Título mejorado -->
      <div class="space-y-4 md:space-y-6">
        <h1 class="text-5xl sm:text-5xl md:text-5xl lg:text-7xl font-bold tracking-tight">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-white via-purple-200 to-cyan-200">
            David Herrera
          </span>
        </h1>
        
        <p class="text-lg sm:text-xl md:text-2xl text-gray-400 font-light">
          <span class="text-purple-300">Fullstack Developer</span> & <span class="text-cyan-300">Data Engineer</span>
        </p>
      </div>
      
      <!-- Descripción mejorada -->
      <p class="text-base md:text-lg text-gray-300 max-w-xl md:max-w-2xl mx-auto leading-relaxed px-4 md:px-0">
        Creando experiencias digitales excepcionales con código limpio y diseño intuitivo. 
        Me apasiona la <span class="text-purple-300">tecnología</span> y la <span class="text-cyan-300">innovación</span>, 
        siempre buscando aprender y crecer.
      </p>
      
      <!-- Botones mejorados para móvil -->
      <div class="flex flex-col sm:flex-row gap-3 md:gap-4 justify-center mt-6 md:mt-8 px-4 sm:px-0" >
        <a href="#projects" class="group inline-flex items-center justify-center gap-2 px-6 md:px-8 py-2 md:py-3 bg-white text-gray-900 rounded-full font-semibold hover:bg-gray-100 transition-all duration-300 hover:scale-105">
          Ver Proyectos
          <svg class="w-4 h-4 " fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </a>
        <a href="#contact" class="inline-flex items-center justify-center gap-2 px-6 md:px-8 py-2 md:py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full font-semibold hover:bg-white/20 hover:border-purple-400/50 transition-all duration-300 hover:scale-105">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Contactar
        </a>
      </div>

            <!-- Indicador de scroll mejorado -->
      <div class="mt-16 md:mt-24">
        <a href="#about" class="inline-flex flex-col items-center gap-2 group transition-all duration-300 hover:scale-105">
          <span class="text-xs md:text-sm text-gray-500 group-hover:text-gray-300 transition-colors tracking-wide">
            Scroll para explorar
          </span>
          <div class="w-6 h-10 border-2 border-gray-600 group-hover:border-purple-400 rounded-full flex justify-center transition-colors">
            <div class="w-1 h-3 bg-gray-600 group-hover:bg-purple-400 rounded-full mt-2 transition-colors"></div>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

<style is:global>
  @import '../../styles/components/hero.css';
</style>