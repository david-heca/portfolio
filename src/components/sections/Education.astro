---
import { useTranslations } from "@i18n/utils";
import {
  PiGraduationCap,
  PiCertificate,
  PiCalendar,
  PiMapPin,
  PiChartBar,
  PiArrowUpRight,
  PiBooks,
  PiLightning,
  PiStar,
  PiTrophy,
  PiInfinityBold,
} from "react-icons/pi";

export interface Props {
  lang: "es" | "en";
}

const { lang } = Astro.props;
const t = useTranslations(lang);

// Helper functions
const getStatus = (status: string) => {
  const statusMap: Record<string, string> = {
    graduate: t("education.status.graduate"),
    selfTaught: t("education.status.selfTaught"),
  };
  return statusMap[status] || status;
};

const getLevel = (level: string) => {
  const levelMap: Record<string, string> = {
    fundamentals: t("education.levels.fundamentals"),
    intermediate: t("education.levels.intermediate"),
  };
  return levelMap[level] || level;
};

const education = [
  {
    id: 1,
    type: "education",
    institution: t("education.list.platzi.institution"),
    degree: t("education.list.platzi.degree"),
    period: t("education.list.platzi.period"),
    status: getStatus("selfTaught"),
    description: t("education.list.platzi.description"),
    grade: "N/A",
    location: t("education.list.platzi.location"),
    icon: PiLightning,
    accent: "emerald",
  },
  {
    id: 2,
    type: "education",
    institution: t("education.list.tesco.institution"),
    degree: t("education.list.tesco.degree"),
    period: t("education.list.tesco.period"),
    status: getStatus("graduate"),
    description: t("education.list.tesco.description"),
    grade: "96/100",
    location: t("education.list.tesco.location"),
    icon: PiGraduationCap,
    accent: "blue",
  },
  {
    id: 3,
    type: "education",
    institution: t("education.list.cecytem.institution"),
    degree: t("education.list.cecytem.degree"),
    period: t("education.list.cecytem.period"),
    status: getStatus("graduate"),
    description: t("education.list.cecytem.description"),
    grade: "8.8/10",
    location: t("education.list.cecytem.location"),
    icon: PiBooks,
    accent: "violet",
  },
];

const certifications = [
  {
    id: 1,
    name: t("education.certifications.azure.name"),
    issuer: "Microsoft",
    date: "2024",
    credentialId: "AZ-900-123456",
    verifyUrl:
      "https://www.certiport.com/portal/Pages/PrintTranscriptInfo.aspx?action=Cert&id=414&cvid=r+dkpNaAIMQHhll3/TFLLw==",
    skills: ["Azure", "Cloud Computing", "Networking", "Security"],
    level: getLevel("fundamentals"),
    featured: true,
  },
  {
    id: 2,
    name: t("education.certifications.python.name"),
    issuer: "Michigan University",
    date: "2022",
    credentialId: "J7EMYHGRRUH8",
    verifyUrl:
      "https://www.coursera.org/account/accomplishments/verify/J7EMYHGRRUH8",
    skills: ["Python", "Data Structures", "SQL"],
    level: getLevel("fundamentals"),
    featured: true,
  },
  {
    id: 3,
    name: t("education.certifications.aiIntro.name"),
    issuer: "Platzi",
    date: "2023",
    credentialId: "bb841264-3516-4421-a1e2-5f5902c117ee",
    verifyUrl:
      "https://platzi.com/p/david-heca/curso/11157-introduccion-ai/diploma/detalle/",
    skills: ["AI", "Machine Learning", "Data Science"],
    level: getLevel("fundamentals"),
    featured: false,
  },
  {
    id: 4,
    name: t("education.certifications.chatbot.name"),
    issuer: "Platzi",
    date: "2023",
    credentialId: "60c81aa1-626e-4a7c-9842-8b4a2fabc165",
    verifyUrl:
      "https://platzi.com/p/david-heca/curso/8946-azureopenia/diploma/detalle/",
    skills: ["Chatbots", "Azure", "OpenAI"],
    level: getLevel("intermediate"),
    featured: false,
  },
  {
    id: 5,
    name: t("education.certifications.terminal.name"),
    issuer: "Platzi",
    date: "2023",
    credentialId: "5584d92c-c845-442e-819b-2b31a747f230",
    verifyUrl:
      "https://platzi.com/p/david-heca/curso/2292-terminal/diploma/detalle/",
    skills: ["Terminal", "Command Line", "Linux"],
    level: getLevel("fundamentals"),
    featured: false,
  },
];

const featuredCerts = certifications.filter((c) => c.featured);
const otherCerts = certifications.filter((c) => !c.featured);
---

<section>
  <!-- Header -->
  <div class="animate-slide-up text-center mb-12">
    <h1
      class="text-4xl md:text-5xl font-bold text-zinc-900 dark:text-white mb-4"
    >
      {t("education.title")}
    </h1>
    <p class="text-xl text-zinc-500 dark:text-zinc-400">
      {t("education.subtitle")}
    </p>
  </div>

  <!-- Bento Grid Layout -->
  <div class="grid grid-cols-12 gap-4 md:gap-6">
    <!-- Stats Card -->
    <div class="col-span-12 mt-4">
      <div
        class="bg-gray-50 dark:bg-gray-900 border border-zinc-300 dark:border-zinc-700 rounded-3xl p-6"
      >
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div class="text-center">
            <p class="text-3xl font-bold text-zinc-900 dark:text-white mb-1">
              3
            </p>
            <p class="text-sm text-zinc-500 dark:text-zinc-400">
              {t("education.stats.degrees")}
            </p>
          </div>
          <div class="text-center">
            <p class="text-3xl font-bold text-zinc-900 dark:text-white mb-1">
              5+
            </p>
            <p class="text-sm text-zinc-500 dark:text-zinc-400">
              {t("education.stats.certifications")}
            </p>
          </div>
          <div class="text-center">
            <p class="text-3xl font-bold text-zinc-900 dark:text-white mb-1">
              8+
            </p>
            <p class="text-sm text-zinc-500 dark:text-zinc-400">
              {t("education.stats.yearsLearning")}
            </p>
          </div>
          <div class="text-center">
            <p
              class="text-3xl font-bold text-emerald-600 dark:text-emerald-400 mb-1"
            >
              <PiInfinityBold className="inline w-9 h-9" />
            </p>
            <p class="text-sm text-zinc-500 dark:text-zinc-400">
              {t("education.stats.curiosity")}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Section Header: Academic Background -->
    <div class="col-span-12 mt-8 mb-2">
      <div class="flex items-center gap-3">
        <div
          class="w-10 h-10 rounded-2xl bg-gray-100 dark:bg-gray-800 border border-zinc-200 dark:border-zinc-700 flex items-center justify-center"
        >
          <PiGraduationCap
            className="w-5 h-5 text-zinc-600 dark:text-zinc-400"
          />
        </div>
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-white">
          {t("education.sections.academic")}
        </h2>
      </div>
    </div>

    <!-- Education Cards -->
    {
      education.map((edu, index) => (
        <div
          class={`col-span-12 ${index === 0 ? "lg:col-span-12" : "lg:col-span-6"} group`}
        >
          <div class="h-full bg-gray-50 dark:bg-gray-900 border border-zinc-300 dark:border-zinc-700 rounded-3xl p-6 md:p-8 transition-all duration-300 hover:border-zinc-300 dark:hover:border-zinc-700 hover:shadow-lg">
            <div class="flex flex-col h-full">
              {/* Header with Icon and Status */}
              <div class="flex items-start justify-between mb-6">
                <div
                  class={`w-14 h-14 rounded-2xl flex items-center justify-center ${
                    edu.accent === "emerald"
                      ? "bg-emerald-500/10 dark:bg-emerald-500/20"
                      : edu.accent === "blue"
                        ? "bg-blue-500/10 dark:bg-blue-500/20"
                        : "bg-violet-500/10 dark:bg-violet-500/20"
                  }`}
                >
                  <edu.icon
                    className={`w-7 h-7 ${
                      edu.accent === "emerald"
                        ? "text-emerald-600 dark:text-emerald-400"
                        : edu.accent === "blue"
                          ? "text-blue-600 dark:text-blue-400"
                          : "text-violet-600 dark:text-violet-400"
                    }`}
                  />
                </div>
                <span
                  class={`px-3 py-1.5 rounded-full text-xs font-medium ${
                    edu.status.includes("Autodidacta") ||
                    edu.status.includes("Self")
                      ? "bg-emerald-500/10 text-emerald-600 dark:text-emerald-400 border border-emerald-500/20"
                      : "bg-blue-500/10 text-blue-600 dark:text-blue-400 border border-blue-500/20"
                  }`}
                >
                  {edu.status}
                </span>
              </div>

              {/* Content */}
              <div class="flex-1">
                <h3 class="text-xl md:text-2xl font-bold text-zinc-900 dark:text-white mb-2 group-hover:text-zinc-700 dark:group-hover:text-zinc-200 transition-colors">
                  {edu.degree}
                </h3>
                <p class="text-zinc-600 dark:text-zinc-400 font-medium mb-4">
                  {edu.institution}
                </p>
                <p class="text-zinc-500 dark:text-zinc-500 text-sm leading-relaxed mb-6">
                  {edu.description}
                </p>
              </div>

              {/* Meta Info */}
              <div class="grid grid-cols-1 md:grid-cols-2 gap-2 md:gap-4 pt-6 border-t border-zinc-300 dark:border-zinc-700">
                <div class="flex items-center gap-2">
                  <PiCalendar className="w-4 h-4 text-zinc-400" />
                  <span class="text-sm text-zinc-600 dark:text-zinc-400">
                    {edu.period}
                  </span>
                </div>
                <div class="flex items-center gap-2">
                  <PiMapPin className="w-4 h-4 text-zinc-400" />
                  <span class="text-sm text-zinc-600 dark:text-zinc-400 truncate">
                    {edu.location}
                  </span>
                </div>
                <div class="flex items-center gap-2">
                  <PiChartBar className="w-4 h-4 text-zinc-400" />
                  <span class="text-sm text-zinc-600 dark:text-zinc-400">
                    {edu.grade}
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))
    }

    <!-- Section Header: Certifications -->
    <div class="col-span-12 mt-8 mb-2">
      <div class="flex items-center gap-3">
        <div
          class="w-10 h-10 rounded-2xl bg-gray-100 dark:bg-gray-800 border border-zinc-200 dark:border-zinc-700 flex items-center justify-center"
        >
          <PiCertificate className="w-5 h-5 text-zinc-600 dark:text-zinc-400" />
        </div>
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-white">
          {t("education.sections.certifications")}
        </h2>
      </div>
    </div>

    <!-- Featured Certifications -->
    {
      featuredCerts.map((cert) => (
        <div class="col-span-12 md:col-span-6 group">
          <a
            href={cert.verifyUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="block h-full"
          >
            <div class="h-full bg-linear-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 border border-zinc-200 dark:border-zinc-700 rounded-3xl p-6 transition-all duration-300 hover:border-zinc-300 dark:hover:border-zinc-600 hover:shadow-xl hover:-translate-y-1">
              <div class="flex flex-col h-full">
                {/* Header */}
                <div class="flex items-start justify-between mb-4">
                  <div class="w-12 h-12 rounded-2xl bg-amber-500/10 dark:bg-amber-500/20 flex items-center justify-center">
                    <PiTrophy className="w-6 h-6 text-amber-600 dark:text-amber-400" />
                  </div>
                  <div class="flex items-center gap-2">
                    <PiStar className="w-4 h-4 text-amber-500" />
                    <span class="text-xs text-zinc-500 dark:text-zinc-400">
                      {t("education.labels.featured")}
                    </span>
                  </div>
                </div>

                {/* Content */}
                <div class="flex-1">
                  <h3 class="text-lg font-bold text-zinc-900 dark:text-white mb-2 group-hover:text-zinc-700 dark:group-hover:text-zinc-200 transition-colors leading-tight">
                    {cert.name}
                  </h3>
                  <p class="text-zinc-600 dark:text-zinc-400 text-sm mb-4">
                    {cert.issuer} • {cert.date}
                  </p>

                  {/* Skills */}
                  <div class="flex flex-wrap gap-2 mb-4">
                    {cert.skills.map((skill) => (
                      <span class="px-2.5 py-1 bg-gray-200/50 dark:bg-gray-700/50 text-zinc-700 dark:text-zinc-300 rounded-lg text-xs">
                        {skill}
                      </span>
                    ))}
                  </div>
                </div>

                {/* Footer */}
                <div class="flex items-center justify-between pt-4 border-t border-zinc-200 dark:border-zinc-700">
                  <span class="text-xs text-zinc-400 font-mono">
                    {cert.credentialId.slice(0, 12)}...
                  </span>
                  <span class="flex items-center gap-1 text-sm text-zinc-600 dark:text-zinc-400 group-hover:text-zinc-900 dark:group-hover:text-white transition-colors">
                    {t("education.labels.viewCredential")}
                    <PiArrowUpRight className="w-4 h-4 group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-transform" />
                  </span>
                </div>
              </div>
            </div>
          </a>
        </div>
      ))
    }

    <!-- Other Certifications -->
    {
      otherCerts.map((cert) => (
        <div class="col-span-12 sm:col-span-6 lg:col-span-4 group">
          <a
            href={cert.verifyUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="block h-full"
          >
            <div class="h-full bg-gray-50 dark:bg-gray-900 border border-zinc-300 dark:border-zinc-700 rounded-3xl p-5 transition-all duration-300 hover:border-zinc-300 dark:hover:border-zinc-700 hover:shadow-lg hover:-translate-y-1">
              {/* Header */}
              <div class="flex items-start justify-between mb-4">
                <div class="w-10 h-10 rounded-xl bg-gray-200/50 dark:bg-gray-800 flex items-center justify-center">
                  <PiCertificate className="w-5 h-5 text-zinc-600 dark:text-zinc-400" />
                </div>
                <span
                  class={`px-2 py-1 rounded-full text-xs font-medium ${
                    cert.level.includes(t("education.levels.intermediate"))
                      ? "bg-violet-500/10 text-violet-600 dark:text-violet-400"
                      : "bg-gray-200/50 dark:bg-gray-800 text-zinc-600 dark:text-zinc-400"
                  }`}
                >
                  {cert.level}
                </span>
              </div>

              {/* Content */}
              <h3 class="text-base font-semibold text-zinc-900 dark:text-white mb-2 group-hover:text-zinc-700 dark:group-hover:text-zinc-200 transition-colors leading-tight line-clamp-2">
                {cert.name}
              </h3>
              <p class="text-zinc-500 dark:text-zinc-500 text-sm mb-4">
                {cert.issuer} • {cert.date}
              </p>

              {/* Skills */}
              <div class="flex flex-wrap gap-1.5 mb-4">
                {cert.skills.slice(0, 3).map((skill) => (
                  <span class="px-2 py-0.5 bg-gray-200/50 dark:bg-gray-800 text-zinc-600 dark:text-zinc-400 rounded text-xs">
                    {skill}
                  </span>
                ))}
              </div>

              {/* Link indicator */}
              <div class="flex items-center gap-1 text-xs text-zinc-400 group-hover:text-zinc-600 dark:group-hover:text-zinc-300 transition-colors">
                <span>{t("education.labels.verify")}</span>
                <PiArrowUpRight className="w-3 h-3 group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-transform" />
              </div>
            </div>
          </a>
        </div>
      ))
    }
  </div>
</section>
