---
import { ClientRouter } from "astro:transitions";
import Navbar from "@ui/Navbar.astro";
import "@styles/global.css";
import { PiHeartDuotone } from "react-icons/pi";
import AppToaster from "@ui/AppToaster";

export interface Props {
  title: string;
  description: string;
  lang?: "es" | "en";
}

const { title, description, lang = "es" } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL("/assets/dh.webp", Astro.site);
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <meta name="author" content="David Herrera" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Performance Hints -->
    <link rel="preconnect" href="https://davidherrera.dev" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <title>{title}</title>
    <ClientRouter />

    <script is:inline>
      // Aplicar tema en navegaciones de view transition
      function setThemeOnNavigation() {
        const themePreference = localStorage.getItem("color-theme") || "system";
        const resolvedTheme =
          themePreference === "system"
            ? window.matchMedia("(prefers-color-scheme: dark)").matches
              ? "dark"
              : "light"
            : themePreference;

        if (resolvedTheme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      }

      // Ejecutar ANTES de que se haga el swap de contenido
      document.addEventListener("astro:before-swap", (e) => {
        // Preservar el tema en el nuevo documento
        const currentTheme =
          document.documentElement.classList.contains("dark");
        if (currentTheme) {
          e.newDocument.documentElement.classList.add("dark");
        }
      });

      document.addEventListener("astro:after-swap", setThemeOnNavigation);

      // React to OS theme changes when in system mode
      if (!window.__themeMediaListener) {
        const media = window.matchMedia("(prefers-color-scheme: dark)");
        const handler = () => {
          const preference = localStorage.getItem("color-theme");
          if (preference === "system" || !preference) {
            setThemeOnNavigation();
          }
        };

        if (media.addEventListener) {
          media.addEventListener("change", handler);
        }

        window.__themeMediaListener = true;
      }
    </script>
  </head>
  <body
    class="min-h-screen bg-white dark:bg-gray-950 text-gray-900 dark:text-gray-50 flex flex-col"
  >
    <AppToaster client:load transition:persist="toaster" />
    <!-- Background Pattern -->
    <div
      class="fixed inset-0 z-[-1] bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-size-[30px_30px]"
    >
    </div>

    <Navbar transition:persist="navbar" />

    <main
      class="grow pt-26 pb-12 px-4 sm:px-6 lg:px-8 max-w-6xl mx-auto w-full"
    >
      <slot />
    </main>

    <footer
      class="bg-white/70 dark:bg-gray-950/70 backdrop-blur-xl border-t border-zinc-300 dark:border-zinc-700 py-6 px-6 mt-auto"
      transition:persist="footer"
    >
      <div
        class="max-w-7xl mx-auto px-4 text-center text-gray-500 dark:text-gray-400 text-sm"
      >
        <p
          class="flex sm:justify-center sm:items-center justify-center items-center gap-2"
        >
          &copy; {new Date().getFullYear()} David Herrera.
          {
            lang === "es" ? (
              <span class="hidden md:flex items-center gap-1">
                Hecho con <PiHeartDuotone size={20} className="text-red-500" />{" "}
                desde MÃ©xico.
              </span>
            ) : (
              <span class="hidden md:flex items-center gap-1">
                Made with <PiHeartDuotone size={20} className="text-red-500" />{" "}
                from Mexico.
              </span>
            )
          }
        </p>
      </div>
    </footer>
  </body>
</html>
