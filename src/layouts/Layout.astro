---
import { ClientRouter } from "astro:transitions";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
import { PiHeartDuotone } from "react-icons/pi";

export interface Props {
  title: string;
  description: string;
  lang?: "es" | "en";
}

const { title, description, lang = "es" } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL("/assets/dh.webp", Astro.site);
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <title>{title}</title>
    <ClientRouter />

    <script is:inline>
      // Aplicar tema en navegaciones de view transition
      function setThemeOnNavigation() {
        const themePreference = localStorage.getItem("color-theme") || "system";
        const resolvedTheme =
          themePreference === "system"
            ? window.matchMedia("(prefers-color-scheme: dark)").matches
              ? "dark"
              : "light"
            : themePreference;

        if (resolvedTheme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      }

      // Ejecutar ANTES de que se haga el swap de contenido
      document.addEventListener("astro:before-swap", (e) => {
        // Preservar el tema en el nuevo documento
        const currentTheme =
          document.documentElement.classList.contains("dark");
        if (currentTheme) {
          e.newDocument.documentElement.classList.add("dark");
        }
      });

      document.addEventListener("astro:after-swap", setThemeOnNavigation);

      // React to OS theme changes when in system mode
      if (!window.__themeMediaListener) {
        const media = window.matchMedia("(prefers-color-scheme: dark)");
        const handler = () => {
          const preference = localStorage.getItem("color-theme");
          if (preference === "system" || !preference) {
            setThemeOnNavigation();
          }
        };

        if (media.addEventListener) {
          media.addEventListener("change", handler);
        }

        window.__themeMediaListener = true;
      }
    </script>
  </head>
  <body
    class="min-h-screen bg-white dark:bg-gray-950 text-gray-900 dark:text-gray-50 flex flex-col"
  >
    <!-- Background Pattern -->
    <div
      class="fixed inset-0 z-[-1] bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-size-[30px_30px]"
    >
    </div>

    <!-- Cursor Glow Effect on Grid -->
    <div
      id="grid-glow"
      class="fixed inset-0 z-[-1] pointer-events-none opacity-0 transition-opacity duration-500"
      style="
        background: 
          radial-gradient(circle 400px at var(--x, 10%) var(--y, 10%), 
            rgba(59, 131, 246, 0.036) 0%, 
            transparent 60%),
          radial-gradient(circle 400px at var(--x, 10%) var(--y, 10%), 
            transparent 0%, 
            transparent 5%),
          linear-gradient(to right, rgba(59, 130, 246, 0.5) 1px, transparent 1px),
          linear-gradient(to bottom, rgba(59, 130, 246, 0.5) 1px, transparent 1px);
        background-size: 100% 100%, 100% 100%, 30px 30px, 30px 30px;
        mask-image: radial-gradient(circle 400px at var(--x, 50%) var(--y, 50%), black 0%, transparent 60%);
        -webkit-mask-image: radial-gradient(circle 400px at var(--x, 50%) var(--y, 50%), black 0%, transparent 70%);
      "
    >
    </div>

    <div
      class="fixed inset-0 z-[-1] bg-[radial-gradient(ellipse_80%_50%_at_50%_-20%,rgba(120,119,198,0.15),rgba(255,255,255,0))] dark:bg-[radial-gradient(ellipse_80%_50%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>

    <Navbar transition:persist="navbar" />

    <main
      class="grow pt-26 pb-12 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto w-full"
    >
      <slot />
    </main>

    <footer
      class="bg-white/70 dark:bg-gray-950/70 backdrop-blur-xl border-t border-gray-200 dark:border-gray-800 py-8 px-6 mt-auto"
      transition:persist="footer"
    >
      <div
        class="max-w-7xl mx-auto px-4 text-center text-gray-500 dark:text-gray-400 text-sm"
      >
        <p
          class="flex flex-col sm:flex-row sm:justify-center sm:items-center gap-2 justify-center items-center"
        >
          &copy; {new Date().getFullYear()} David Herrera.
          {
            lang === "es" ? (
              <>
                Hecho con <PiHeartDuotone size={20} className="text-red-500" />{" "}
                desde MÃ©xico.
              </>
            ) : (
              <>
                Made with <PiHeartDuotone size={20} className="text-red-500" />{" "}
                from Mexico.
              </>
            )
          }
        </p>
      </div>
    </footer>

    <script>
      function initGlow() {
        const glow = document.getElementById("grid-glow");
        if (!glow) return;

        document.body.addEventListener("mousemove", (e) => {
          const x = (e.clientX / window.innerWidth) * 100;
          const y = (e.clientY / window.innerHeight) * 100;
          glow.style.setProperty("--x", x + "%");
          glow.style.setProperty("--y", y + "%");
          glow.style.opacity = "1";
        });

        document.body.addEventListener("mouseleave", () => {
          glow.style.opacity = "0";
        });
      }

      initGlow();
      document.addEventListener("astro:after-swap", initGlow);
    </script>
  </body>
</html>
