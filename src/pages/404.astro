---
import Layout from "../layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { PiHouse, PiWarning, PiArrowLeft } from "react-icons/pi";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const title = `${t("notFound.heading")} - ${t("notFound.title")}`;
const description = t("notFound.description");
---

<Layout title={title} description={description} lang={lang}>
  <section class="min-h-[60vh] px-4 pt-20 pb-20">
    <div class="max-w-4xl mx-auto">
      <!-- Main 404 Card -->
      <div
        class="rounded-3xl bg-gray-50 dark:bg-gray-900 border border-zinc-200 dark:border-zinc-800 p-8 md:p-12 text-center relative overflow-hidden group"
      >
        <!-- Background decoration -->
        <div
          class="absolute top-0 right-0 p-4 opacity-5 group-hover:opacity-10 transition-opacity pointer-events-none"
        >
          <PiWarning className="w-48 h-48" />
        </div>

        <!-- Content -->
        <div class="relative z-10">
          <!-- 404 Number -->
          <div class="mb-6">
            <h1
              class="text-8xl md:text-9xl font-bold text-zinc-900 dark:text-white mb-2 tracking-tight"
            >
              {t("notFound.heading")}
            </h1>
          </div>

          <!-- Subtitle -->
          <h2
            class="text-2xl md:text-3xl font-semibold text-zinc-900 dark:text-white mb-4"
          >
            {t("notFound.subtitle")}
          </h2>

          <!-- Description -->
          <p
            class="text-zinc-600 dark:text-zinc-400 text-base md:text-lg max-w-2xl mx-auto mb-8 leading-relaxed"
          >
            {t("notFound.description")}
          </p>

          <!-- Action Buttons -->
          <div
            class="flex flex-col sm:flex-row items-center justify-center gap-3 mt-8"
          >
            <button
              onclick="history.back()"
              class="w-full sm:w-auto px-6 py-3 rounded-xl bg-white dark:bg-gray-800 border border-zinc-200 dark:border-zinc-700 text-zinc-700 dark:text-zinc-300 font-medium hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-zinc-300 dark:hover:border-zinc-600 transition-all duration-200 flex items-center justify-center gap-2 group/btn"
            >
              <PiArrowLeft
                className="w-5 h-5 group-hover/btn:-translate-x-1 transition-transform"
              />
              {t("notFound.backButton")}
            </button>

            <a
              href={lang === "es" ? "/" : "/en"}
              class="w-full sm:w-auto px-6 py-3 rounded-xl bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 text-white font-medium transition-all duration-200 flex items-center justify-center gap-2 hover:shadow-lg"
            >
              <PiHouse className="w-5 h-5" />
              {t("notFound.homeButton")}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
